<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    app:cardCornerRadius="15dp"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <TextView
            android:layout_marginTop="40px"
            android:textSize="35px"
            android:gravity="center"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="请选择注册身份" />

    <LinearLayout
        android:layout_marginLeft="30px"
        android:layout_marginTop="50px"
        android:layout_marginRight="30px"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="50px">

        <ImageView
            android:id="@+id/register_student"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            app:srcCompat="@drawable/add03" />

        <ImageView
            android:id="@+id/register_teacher"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="match_parent"
            app:srcCompat="@drawable/add03" />
    </LinearLayout>

    <LinearLayout
        android:layout_marginLeft="30px"
        android:layout_marginTop="50px"
        android:layout_marginRight="30px"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <LinearLayout
            android:id="@+id/register_student_ll"
            android:orientation="vertical"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="match_parent">
    <ImageView
        android:layout_gravity="center"
        android:id="@+id/imageView5"
        android:layout_width="wrap_content"
        android:layout_height="250px"
        app:srcCompat="@drawable/register_student" />

    </LinearLayout>
            <LinearLayout
                android:id="@+id/register_teacher_ll"
                android:orientation="vertical"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="match_parent">
                <ImageView
                    android:layout_gravity="center"
                    android:layout_width="wrap_content"
                    android:layout_height="250px"
                    app:srcCompat="@drawable/register_teacher" />

            </LinearLayout>
        </LinearLayout>
        <ImageView
            android:layout_marginTop="50px"
            android:layout_gravity="center"
            android:src="@mipmap/register_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
    </LinearLayout>
</android.support.v7.widget.CardView>