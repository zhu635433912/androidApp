        <TextView
            android:textSize="30px"
            android:layout_marginTop="10px"
            android:layout_below="@+id/tianjiaxuelitubiao"
            android:layout_centerHorizontal="true"
            android:text="添加学历"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
    </RelativeLayout>
