        <Button
            android:id="@+id/naxt"
            android:textColor="#fd1245"
            android:layout_marginTop="20px"
            android:layout_below="@+id/editText2"
            android:layout_alignLeft="@+id/editText2"
            android:textSize="30px"
            android:text="完成"
            android:background="#f3f7f8"
            android:layout_width="194px"
            android:layout_height="79px" />
        </RelativeLayout>
        <RelativeLayout
            android:id="@+id/tianjiaxueli"
            android:background="@drawable/xuxian"
            android:layout_marginTop="20px"
            android:layout_below="@+id/viw"
            android:layout_centerHorizontal="true"
            android:layout_width="680px"
            android:layout_height="180px">
            <Button
                android:id="@+id/tianjiakecheng"
                android:layout_marginTop="40px"
                android:layout_alignParentTop="true"
                android:layout_centerHorizontal="true"
                android:background="@drawable/hly62"
                android:layout_width="66px"
                android:layout_height="66px" />
            <TextView
                android:textSize="30px"
                android:layout_marginTop="10px"
                android:layout_below="@+id/tianjiakecheng"
                android:layout_centerHorizontal="true"
                android:text="添加课程"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
        </RelativeLayout>
        <TextView
