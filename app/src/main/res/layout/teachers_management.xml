                android:paddingLeft="10px"
                android:paddingTop="10px"
                android:gravity="top"
                android:hint="输入个人简介"
                android:id="@+id/gerjianjietext_edi"
                android:background="@drawable/gerxxkk"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="20px"
                android:layout_alignParentTop="true"
                android:layout_width="680px"
                android:layout_height="200px" />
            <EditText
                android:id="@+id/techang"
                android:gravity="center"
                android:textSize="25px"
                android:hint="输入特长"
                android:layout_marginTop="20px"
                android:layout_alignLeft="@+id/gerjianjietext_edi"
                android:layout_below="@+id/gerjianjietext_edi"
                android:background="@drawable/gerxxkk"
                android:layout_width="320px"
                android:layout_height="70px" />
            <EditText
                android:id="@+id/biyexuex"
                android:gravity="center"
                android:textSize="25px"
                android:hint="输入毕业学校"
                android:layout_marginTop="20px"
                android:layout_alignRight="@+id/gerjianjietext_edi"
                android:layout_below="@+id/gerjianjietext_edi"
                android:background="@drawable/gerxxkk"
                android:layout_width="320px"
                android:layout_height="70px" />
        </RelativeLayout>
