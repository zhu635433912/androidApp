             android:layout_centerHorizontal="true"
             android:layout_width="680px"
             android:layout_height="100px">
             <ImageView
                 android:id="@+id/rongyu_image1"
                 android:layout_width="0dp"
                 android:layout_weight="1"
                 android:layout_height="match_parent" />
             <ImageView
                 android:id="@+id/rongyu_image2"
                 android:layout_width="0dp"
                 android:layout_weight="1"
                 android:layout_height="match_parent" />
             </LinearLayout>
        <ListView
            android:id="@+id/rongyuzhengshulist"
            android:layout_below="@+id/rongyuzhengshu"
            android:layout_width="match_parent"
            android:layout_height="10px"/>
        <RelativeLayout
            android:id="@+id/tianjiazhengshu"
            android:background="@drawable/xuxian"
            android:layout_marginTop="20px"
            android:layout_below="@+id/rongyuimage"
            android:layout_centerHorizontal="true"
            android:layout_width="680px"
            android:layout_height="180px">
