                android:textColor="#f7c55e"
                android:textSize="30px"
                android:layout_marginRight="10px"
                android:text="更换"
                android:layout_marginTop="10px"
                android:layout_alignParentTop="true"
                android:layout_alignParentRight="true"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

        </RelativeLayout>
         <RelativeLayout
             android:layout_marginTop="20px"
             android:layout_marginLeft="20px"
             android:layout_below="@+id/kechenfengmian"
             android:layout_toRightOf="@+id/kechengtupian"
             android:background="@drawable/add08"
             android:layout_width="310px"
             android:layout_height="188px" >
             <EditText
                 android:id="@+id/person_sign"
                 android:textSize="30px"
                 android:gravity="center"
                 android:textColor="#747475"
                 android:background="@drawable/gerxxkk"
                 android:hint="个人签名"
                 android:layout_width="match_parent"
                 android:layout_height="match_parent" />
         </RelativeLayout>
        <TextView
            android:id="@+id/kecheng"
            android:layout_marginTop="40px"
            android:layout_alignLeft="@+id/kechengtupian"
            android:layout_below="@+id/kechengtupian"
            android:textSize="30px"
            android:text="课程"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <ListView
            android:divider="@null"
            android:id="@+id/kechengitme"
            android:layout_below="@+id/kecheng"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
