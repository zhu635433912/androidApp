<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">
    <RelativeLayout
        android:layout_gravity="center"
        android:layout_marginTop="24px"
        android:background="@drawable/gerxxkk"
        android:layout_width="600px"
        android:layout_height="92px">
        <TextView
            android:id="@+id/gerxxyiduiyi"
            android:layout_marginLeft="50px"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:text="1对1"
            android:textSize="30px"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <TextView
            android:id="@+id/kechengzhongle"
            android:layout_marginLeft="50px"
            android:layout_toRightOf="@+id/gerxxyiduiyi"
            android:layout_centerVertical="true"
            android:text="语文课程"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <TextView
            android:id="@+id/kecheng_type"
            android:layout_marginLeft="50px"
            android:layout_toRightOf="@+id/kechengzhongle"
            android:layout_centerVertical="true"
            android:text="老师上门"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <TextView
            android:id="@+id/kechengfeee"
            android:layout_marginRight="20px"
            android:textColor="#fd0ba9"
            android:layout_centerVertical="true"
            android:layout_alignParentRight="true"
            android:text="40元/时"
            android:textSize="30px"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
    </RelativeLayout>
</LinearLayout>