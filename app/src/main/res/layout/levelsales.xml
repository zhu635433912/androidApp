<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <RelativeLayout
        android:id="@+id/fenxiaofanhui"
        android:layout_width="120px"
        android:layout_height="80px"/>

    <ImageButton
        android:id="@+id/yijifenxiaohuitui"
        android:layout_marginLeft="30px"
        android:layout_marginTop="20px"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:background="@drawable/add19"
        android:layout_width="20px"
        android:layout_height="30px" />
    <TextView
        android:id="@+id/myleve_name"
        android:textSize="35px"
        android:layout_marginTop="20px"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:text=""
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
    <TextView
        android:id="@+id/xuqiufenggexian"
        android:background="#d7d7d7"
        android:layout_marginTop="80px"
        android:layout_below="@+id/neirongtext"
        android:layout_width="match_parent"
        android:layout_height="1px" />
    <RelativeLayout
        android:id="@+id/yijifenxiaolayout"
        android:layout_marginTop="20px"
        android:layout_below="@+id/xuqiufenggexian"
        android:layout_centerHorizontal="true"
        android:background="@drawable/add08"
        android:layout_width="700px"
        android:layout_height="410px">
        <TextView
            android:textColor="#222328"
            android:layout_marginTop="160px"
            android:layout_marginLeft="160px"
            android:layout_alignParentLeft="true"
            android:layout_alignParentTop="true"
            android:textSize="60px"
            android:text="ï¿¥"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <TextView
            android:id="@+id/yijifenxiaofee"
            android:textColor="#4a4a4a"
            android:layout_centerVertical="true"
            android:layout_centerHorizontal="true"
            android:textSize="80px"
            android:text=""
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <TextView
            android:id="@+id/zongordet"
            android:textSize="30px"
            android:layout_marginEnd="10px"
            android:layout_below="@+id/yijifenxiaofee"
            android:layout_alignEnd="@+id/yijifenxiaofee"
            android:text=""
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <TextView
            android:id="@+id/zongrogin"
            android:textSize="30px"
            android:layout_marginBottom="30px"
            android:layout_marginEnd="40px"
            android:layout_alignParentEnd="true"
            android:layout_alignParentBottom="true"
            android:text=""
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
    </RelativeLayout>
<com.handmark.pulltorefresh.library.PullToRefreshListView
    android:layout_marginTop="50px"
    android:id="@+id/myfenxiaolistview"
    android:layout_below="@+id/yijifenxiaolayout"
