<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:text="发布课程"
        android:textSize="35px"
        android:layout_marginTop="40px"
        android:layout_marginLeft="40px"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
    <LinearLayout
        android:layout_marginTop="20px"
        android:layout_width="match_parent"
        android:layout_height="80px">

        <TextView
            style="@style/manager_text_style"
            android:text="课程科目"/>
        <TextView
            android:id="@+id/manager_choose_subject"
            android:gravity="center"
            android:hint="选择课程"
            android:textSize="30px"
            android:layout_marginRight="50px"
            android:layout_marginLeft="30px"
            android:background="@drawable/manager_kuang"
            android:layout_width="match_parent"
            android:layout_height="match_parent" />
    </LinearLayout>
    <LinearLayout
        android:layout_marginTop="40px"
        android:layout_width="match_parent"
        android:layout_height="80px">

        <TextView
            style="@style/manager_text_style"
            android:text="课程年级"/>
        <TextView
            android:id="@+id/manager_choose_grade"
            android:gravity="center"
            android:hint="选择年级"
            android:textSize="30px"
            android:layout_marginRight="50px"
            android:layout_marginLeft="30px"
            android:background="@drawable/manager_kuang"
            android:layout_width="match_parent"
            android:layout_height="match_parent" />
    </LinearLayout>
    <LinearLayout
        android:layout_marginTop="40px"
        android:layout_marginRight="40px"
        android:layout_width="match_parent"
        android:layout_height="180px">

        <TextView
            style="@style/manager_text_style"
            android:text="服务费用"/>
        <LinearLayout
            android:layout_weight="1"
            android:layout_width="0dp"
            android:orientation="vertical"
            android:layout_height="match_parent">
            <TextView
                android:gravity="center"
                android:textSize="30px"
                android:textColor="#585656"
                android:text="上门服务"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"/>
            <EditText
                android:id="@+id/manager_visit_fee"
                android:gravity="center"
                android:hint="课时费"
                android:inputType="number"
                android:textSize="30px"
                android:layout_marginRight="20px"
                android:layout_marginLeft="30px"
                android:background="@drawable/keshi_fee_kuang"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"/>
        </LinearLayout>
        <LinearLayout
            android:layout_weight="1"
            android:layout_width="0dp"
            android:orientation="vertical"
            android:layout_height="match_parent">
            <TextView
                android:textColor="#585656"
                android:gravity="center"
                android:textSize="30px"
                android:text="学生上门"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"/>
            <EditText
                android:id="@+id/manager_unvisit_fee"
                android:gravity="center"
                android:hint="课时费"
                android:inputType="number"
                android:textSize="30px"
                android:layout_marginRight="20px"
                android:layout_marginLeft="30px"
                android:background="@drawable/keshi_fee_kuang"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"/>
        </LinearLayout>
    </LinearLayout>
    <LinearLayout
        android:layout_marginTop="40px"
        android:layout_width="match_parent"
        android:layout_height="80px">

        <TextView
            style="@style/manager_text_style"
            android:text="课程说明"/>
        <TextView
            android:id="@+id/manager_choose_desc"
            android:gravity="center"
            android:hint="选择课程说明"
            android:textSize="30px"
            android:layout_marginRight="50px"
            android:layout_marginLeft="30px"
            android:background="@drawable/manager_kuang"
            android:layout_width="match_parent"
            android:layout_height="match_parent" />
    </LinearLayout>
    <View
        android:layout_marginTop="20px"
        android:background="#000000"
        android:layout_width="match_parent"
        android:layout_height="1px"/>
    <TextView
        style="@style/manager_text_style"
        android:layout_marginTop="20px"
        android:text="已发布课程"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />
</LinearLayout>