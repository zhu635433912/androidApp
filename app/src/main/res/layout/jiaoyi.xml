<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="#e0eaf1"
    android:layout_height="match_parent">
    <com.wang.avi.AVLoadingIndicatorView
        android:id="@+id/jiaoyishuax"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        app:indicator_color="#000000"
        app:indicator="LineSpinFadeLoader"
        android:layout_width="0px"
        android:layout_height="0px" />
    <RelativeLayout
        android:id="@+id/grfanhui"
    android:background="#fdfdfe"
    android:layout_width="match_parent"
    android:layout_height="100px">
        <TextView
            android:id="@+id/jiaoyi_jubao"
            android:layout_centerVertical="true"
            android:layout_alignParentRight="true"
            android:text="举报"
            android:layout_marginRight="40px"
            android:textSize="40px"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
    <TextView
        android:layout_centerVertical="true"
        android:layout_centerHorizontal="true"
        android:textSize="40px"
        android:text="个人信息"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
    <ImageButton
        android:id="@+id/userxinxi_back"
        android:layout_marginLeft="34px"
        android:layout_alignParentLeft="true"
        android:layout_centerVertical="true"
        android:background="@drawable/add19"
        android:layout_width="25px"
        android:layout_height="35px" />
</RelativeLayout>
<ScrollView
    android:id="@+id/mafegin"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_alignParentTop="true"
    android:layout_centerHorizontal="true">
    <RelativeLayout
        android:id="@+id/gerxxrelayout"
        android:background="@drawable/mask"
        android:layout_centerHorizontal="true"
        android:layout_alignParentTop="true"
        android:layout_marginTop="130px"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <RelativeLayout
            android:id="@+id/gerxxTob"
            android:background="@drawable/texttexiao"
            android:layout_centerHorizontal="true"
            android:layout_width="705px"
            android:layout_height="400px">

            <ImageView
                android:scaleType="fitXY"
                android:id="@+id/curr_backe"
                android:src="@drawable/add11"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_alignParentTop="true"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true" />
             <ImageView
                 android:id="@+id/gerxxtoux"
                 android:layout_marginTop="58px"
                 android:layout_alignParentTop="true"
                 android:layout_centerHorizontal="true"
                 android:scaleType="centerInside"
                 android:src="@drawable/ox2"
                 android:layout_width="110px"
                 android:layout_height="110px" />
            <TextView
                android:id="@+id/diqu"
                android:gravity="center"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_marginTop="20px"
                android:layout_marginLeft="20px"
                android:text="浙江台州"
                android:textSize="25px" />
            <TextView
                android:id="@+id/gerxxname"
                android:layout_marginTop="5px"
                android:layout_below="@+id/gerxxtoux"
                android:layout_centerHorizontal="true"
                android:textColor="#545353"
                android:textSize="30px"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
            <TextView
                android:textSize="30px"
                android:layout_marginTop="30px"
                android:layout_centerHorizontal="true"
                android:layout_below="@+id/gerxxname"
                android:textColor="#545353"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/textView2" />
            <TextView
                android:text="学生"
                android:textColor="#545353"
                android:textSize="30px"
                android:layout_marginLeft="100px"
                android:layout_marginBottom="30px"
                android:layout_alignParentLeft="true"
                android:layout_alignParentBottom="true"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/textView" />
            <TextView
                android:id="@+id/gerxues"
                android:textColor="#545353"
                android:textSize="30px"
                android:layout_marginLeft="10px"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignLeft="@+id/textView"
                android:layout_above="@+id/textView" />
            <TextView
                android:id="@id/textView2"
                android:textSize="30px"
                android:textColor="#545353"
                android:layout_marginLeft="150px"
                android:layout_toRightOf="@id/textView"
                android:layout_alignBottom="@id/textView"
                android:text=" 订单"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
            <TextView
                android:id="@+id/dindan"
                android:layout_marginLeft="23px"
                android:layout_alignLeft="@id/textView2"
                android:layout_above="@id/textView2"
                android:textColor="#545353"
                android:textSize="30px"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
            <TextView
                android:id="@+id/gerxxxuexiquana"
                android:layout_marginRight="60px"
                android:layout_alignParentRight="true"
                android:layout_alignBottom="@id/textView"
                android:text="成交率"
                android:textColor="#545353"
                android:textSize="30px"
                android:gravity="bottom|center_horizontal"
                android:layout_width="150px"
                android:layout_height="100px" />
            <TextView
                android:id="@+id/gerxxxuexiquan"
                android:layout_marginLeft="45px"
                android:layout_alignLeft="@+id/gerxxxuexiquana"
                android:layout_above="@id/textView"
                android:text="100"
                android:textColor="#545353"
                android:textSize="30px"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
        </RelativeLayout>

        <LinearLayout
            android:id="@+id/teacher_eva"
            android:orientation="horizontal"
            android:layout_marginTop="20px"
            android:layout_below="@+id/gerrxxedintext"
            android:background="@drawable/gerxxkk"
            android:layout_centerHorizontal="true"
            android:layout_width="600px"
            android:layout_height="80px">
            <TextView
                android:text="评价"
                android:textSize="30px"
                android:textColor="#111111"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="30px"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
            <ImageView
                android:id="@+id/teacher_star"
                android:layout_marginLeft="50px"

                android:layout_gravity="center_vertical"
                android:layout_width="0px"
                android:layout_height="40px"
                android:layout_weight="1"/>
            <TextView
                android:id="@+id/teacher_star_number"
                android:textSize="30px"
                android:textColor="#646363"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="30px"
                android:text="5.0"
                android:layout_marginRight="50px"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

        </LinearLayout>
        <RelativeLayout
            android:id="@+id/gerxxyiduiyi"
            android:layout_marginTop="20px"
            android:layout_below="@+id/teacher_eva"
            android:background="@drawable/gerxxkk"
            android:layout_centerHorizontal="true"
            android:layout_width="600px"
            android:layout_height="92px">
            <TextView
                android:gravity="center"
                android:textColor="#ef6b6b"
                android:id="@+id/gerjianjie"
                android:layout_marginLeft="50px"
                android:layout_alignParentLeft="true"
                android:textSize="30px"
                android:layout_centerVertical="true"
                android:text="个人简介"
                android:layout_width="wrap_content"
                android:layout_height="200px" />
            <TextView
                android:textColor="#464646"
                android:id="@+id/gerxxjiaoxueanl"
                android:textSize="30px"
                android:layout_marginLeft="50px"
                android:layout_toRightOf="@+id/gerjianjie"
                android:layout_centerVertical="true"
                android:text="教学案例"
                android:layout_width="wrap_content"
                android:layout_height="200px"
                android:gravity="center" />
            <TextView
                android:textColor="#464646"
                android:id="@+id/gerxxjinl"
                android:text="个人经历"
                android:layout_toRightOf="@+id/gerxxjiaoxueanl"
                android:layout_marginLeft="50px"
                android:layout_centerVertical="true"
                android:textSize="30px"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
            <TextView
                android:id="@+id/pingjia"
                android:textColor="#464646"
                android:layout_marginLeft="40px"
                android:layout_toRightOf="@+id/gerxxjinl"
                android:layout_centerVertical="true"
                android:text="评价"
                android:textSize="30px"
                android:layout_width="0px"
                android:layout_height="200px"
                android:gravity="center" />
        </RelativeLayout>

        <ListView
            android:divider="#e0eaf1"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="24px"
            android:id="@+id/gerrxxedintext"
            android:layout_width="600px"
            android:layout_height="wrap_content"
            android:layout_below="@+id/gerxxTob">
        </ListView>
        <TextView
            android:id="@+id/gerxxneirong"
            android:layout_marginTop="40px"
            android:layout_marginLeft="20px"
            android:textSize="26px"
            android:text=""
            android:layout_alignLeft="@+id/gerxxyiduiyi"
            android:layout_below="@+id/gerxxyiduiyi"
            android:layout_centerHorizontal="true"
            android:layout_width="600px"
            android:layout_height="wrap_content" />

        <TextView
            android:id="@+id/xinjijiaoshi"
            android:textColor="#84681f"
            android:gravity="center_horizontal"
            android:layout_width="200px"
            android:layout_height="50px"
            android:layout_below="@+id/gerxxneirong"
            android:layout_alignParentRight="true"
            android:layout_marginRight="50px"
            android:layout_marginTop="5px"
            android:text=""
            android:textSize="25px" />
        <LinearLayout
            android:id="@+id/imagetubiao"
            android:layout_width="680px"
            android:layout_height="80px"
            android:layout_below="@+id/gerxxneirong"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="40px">

            <ImageView
                android:layout_width="50px"
                android:layout_height="50px"
                android:layout_gravity="center"
                android:layout_weight="1"
                android:src="@drawable/hly28" />

            <ImageView
                android:layout_width="50px"
                android:layout_height="50px"
                android:layout_gravity="center"
                android:layout_weight="1"
                android:src="@drawable/hly47" />

            <ImageView
                android:layout_width="50px"
                android:layout_height="50px"
                android:layout_gravity="center"
                android:layout_weight="1"
                android:src="@drawable/hly47" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/linearLayout"
            android:layout_width="680px"
            android:layout_height="50px"
            android:layout_below="@+id/imagetubiao"
            android:layout_centerHorizontal="true">

            <TextView
                android:id="@+id/jiaoling"
                android:layout_width="110px"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center"
                android:text="七年教龄"
                android:textSize="30px" />

            <TextView
                android:id="@+id/user_card_pass"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center"
                android:text="身份认证"
                android:textSize="30px" />

            <TextView
                android:id="@+id/user_education_pass"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center"
                android:text="学历认证"
                android:textSize="30px" />
        </LinearLayout>





        <TextView
            android:id="@+id/textView6"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@+id/linearLayout"
            android:layout_below="@+id/techaerxue"
            android:layout_marginLeft="20px"
            android:layout_marginTop="20px"
            android:text="特长"
            android:textColor="#f8d07d"
            android:textSize="35px" />
        <TextView
            android:id="@+id/techaertec"
            android:gravity="center_horizontal"
            android:layout_below="@+id/techaerxue"
            android:layout_marginLeft="40px"
            android:layout_marginTop="20px"
            android:layout_toRightOf="@+id/textView7"
            android:layout_width="400px"
            android:textSize="30px"
            android:layout_height="120px" />
        <TextView
            android:id="@+id/textView7"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@+id/linearLayout"
            android:layout_below="@+id/linearLayout"
            android:layout_marginLeft="20px"
            android:layout_marginTop="40px"
            android:text="毕业院校"
            android:textColor="#f8d07d"
            android:textSize="35px" />
        <TextView
            android:id="@+id/techaerxue"
            android:gravity="center"
            android:layout_toRightOf="@+id/textView7"
            android:layout_marginTop="32px"
            android:layout_below="@+id/linearLayout"
            android:layout_width="400px"
            android:textSize="30px"
            android:layout_marginLeft="40px"
            android:layout_height="60px" />
        <TextView
            android:id="@+id/teacher_card"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@+id/linearLayout"
            android:layout_below="@+id/techaertec"
            android:layout_marginLeft="20px"
            android:layout_marginTop="40px"
            android:text="证书"
            android:textColor="#f8d07d"
            android:textSize="35px" />
        <ImageView
            android:layout_marginBottom="250px"
            android:id="@+id/teacher_card_pic"
            android:layout_toRightOf="@+id/textView7"
            android:layout_marginTop="20px"
            android:layout_below="@+id/techaertec"
            android:layout_width="400px"
            android:layout_marginLeft="40px"
            android:layout_height="300px" />
    </RelativeLayout>
</ScrollView>
    <ImageButton
        android:layout_marginBottom="10px"
        android:layout_marginLeft="20px"
       android:layout_alignLeft="@+id/mafegin"
        android:layout_alignParentBottom="true"
        android:background="@drawable/hly33"
        android:layout_width="80px"
        android:layout_height="80px"
        android:id="@+id/imageButton" />

    <ImageButton
        android:id="@+id/bohao"
        android:layout_marginRight="20px"
        android:layout_marginBottom="10px"
        android:layout_alignRight="@+id/mafegin"
        android:layout_alignParentBottom="true"
        android:background="@drawable/hly44"
        android:layout_width="80px"
        android:layout_height="80px" />

    <ImageButton
        android:background="@drawable/hly02"
        android:layout_width="320px"
        android:layout_height="100px"
        android:layout_alignTop="@+id/imageButton"
        android:layout_centerHorizontal="true"
        android:id="@+id/imageButton2" />
    <RelativeLayout
        android:paddingTop="95px"
        android:id="@+id/jiaoyi"
        android:layout_width="match_parent"
        android:layout_height="500px"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />
</RelativeLayout>