<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:background="#fffffe"
    android:layout_height="match_parent">
    <ImageView
        android:layout_width="110px"
        android:layout_height="150px"
        android:id="@+id/imageView"
        android:layout_alignBottom="@+id/pos_relativelayout1"
        android:layout_toLeftOf="@+id/pos_relativelayout1"
        android:layout_toStartOf="@+id/pos_relativelayout1" />

    <RelativeLayout
        android:id="@+id/pos_relativelayout1"
        android:layout_centerHorizontal="true"
        android:layout_centerInParent="true"
        android:layout_width="534px"
        android:layout_height="782px">
        <ImageView
            android:id="@+id/register_logo"
            android:src="@mipmap/login_logo"
            android:layout_alignParentTop="true"
            android:layout_marginTop="15px"
            android:layout_marginEnd="16px"
            android:layout_width="150px"
            android:layout_centerHorizontal="true"
            android:layout_height="0px"
            android:layout_marginRight="15px" />
        <TextView
            android:id="@+id/pos_textviewxiu"
            android:layout_marginLeft="70px"
            android:layout_alignParentTop="true"
            android:layout_alignParentLeft="true"
            android:layout_marginTop="202px"
            android:textColor="#4D4D4D"
            android:textSize="48px"
            android:text="@string/login_xiugai"
            android:layout_width="wrap_content"
            android:layout_height="0px" />
        <ImageView
            android:layout_alignParentTop="true"
            android:layout_alignParentEnd="true"
            android:layout_marginTop="15px"
            android:layout_marginEnd="16px"
            android:layout_width="210px"
            android:layout_height="250px"
            android:layout_alignParentRight="true"
            android:layout_marginRight="15px" />
        <EditText
            android:maxLength="11"
            android:inputType="number"
            android:singleLine="true"
            android:textSize="30px"
            android:hint="请输入手机号"
            android:textColorHint="#c2c2c2"
            android:paddingLeft="70px"
            android:background="@mipmap/login_phone"
            android:layout_below="@+id/pos_textviewxiu"
            android:id="@+id/pos_username"
            android:layout_marginTop="42px"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />
        <EditText
            android:maxLength="6"
            android:textSize="30px"
            android:textColorHint="#c2c2c2"
            android:paddingLeft="70px"
            android:background="@mipmap/login_yzm"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="40px"
            android:hint="请输入验证码"
            android:inputType="number"
            android:singleLine="true"
            android:id="@+id/pos_editextyansema"
            android:layout_below="@+id/pos_username"
            android:layout_alignLeft="@+id/pos_username"
            android:layout_alignStart="@+id/pos_username" />
        <Button
            android:id="@+id/pos_vicat"
            android:layout_alignBottom="@+id/pos_editextyansema"
            android:layout_alignEnd="@+id/pos_editextyansema"
            android:layout_marginBottom="8px"
            android:layout_marginEnd="14px"
            android:text="获取验证码"
            android:textSize="25px"
            android:textColor="#ffffff"
            android:background="@mipmap/register_get_yzm"
            android:layout_width="150px"
            android:layout_height="50px"
            android:layout_alignRight="@+id/pos_editextyansema"
            android:layout_marginRight="14px" />
        <TextView
            android:layout_marginLeft="10px"
            android:layout_toEndOf="@+id/pos_editextyansema"
            android:text=""
            android:layout_alignBottom="@+id/pos_editextyansema"
            android:id="@+id/pos_yzm"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@+id/pos_editextyansema" />
        <EditText
            android:id="@+id/pos_password"
            android:password="true"
            android:textSize="30px"
            android:hint="请设置新密码(长度6-16位)"
            android:textColorHint="#c2c2c2"
            android:paddingLeft="70px"
            android:background="@mipmap/login_psw"
            android:layout_marginTop="40px"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/pos_editextyansema"
            android:layout_alignLeft="@+id/pos_editextyansema"
            />
        <ImageButton
            android:id="@+id/pos_chakan"
            android:layout_marginBottom="20px"
            android:layout_marginRight="14px"
            android:layout_alignEnd="@+id/pos_password"
            android:layout_alignBottom="@+id/pos_password"
            android:background="@drawable/hly46"
            android:layout_width="40px"
            android:layout_height="0px"
            android:layout_alignRight="@+id/pos_password" />
        <Button
            android:text="确认修改"
            android:textColor="#ffffff"
            android:id="@+id/pos_login"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true"
            android:background="@mipmap/register_get_yzm"
            android:layout_marginBottom="66px"
            android:layout_width="match_parent"
            android:layout_height="80px" />
        </RelativeLayout>
    <TextView
        android:textSize="30px"
        android:layout_centerHorizontal="true"
        android:layout_alignParentBottom="true"
        android:text="@string/login_xuelema"
        android:visibility="gone"
        android:layout_marginBottom="10px"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <ImageButton
        android:id="@+id/pos_imageButton"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_marginLeft="30px"
        android:layout_marginTop="60px"
        android:background="@drawable/add07"
        android:layout_width="70px"
        android:layout_height="70px" />

</RelativeLayout>