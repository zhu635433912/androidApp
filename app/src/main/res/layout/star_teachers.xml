<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <RelativeLayout
        android:id="@+id/xinjijiaoshihuitui"
        android:layout_width="100px"
        android:layout_height="80px"></RelativeLayout>
    
    <ImageButton
        android:layout_marginLeft="30px"
        android:layout_marginTop="20px"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:background="@drawable/add19"
        android:layout_width="20px"
        android:layout_height="30px" />
    <TextView
        android:textSize="35px"
        android:layout_marginTop="20px"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:text="星级教师"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
    <TextView
        android:id="@+id/xuqiufenggexian"
        android:background="#d7d7d7"
        android:layout_marginTop="80px"
        android:layout_below="@+id/neirongtext"
        android:layout_width="match_parent"
        android:layout_height="1px" />
    <RelativeLayout
        android:id="@+id/yijifenxiaolayout1"
        android:layout_marginTop="20px"
        android:layout_below="@+id/xuqiufenggexian"
        android:layout_centerHorizontal="true"
        android:background="@drawable/add08"
        android:layout_width="700px"
        android:layout_height="410px">
        <TextView
            android:id="@+id/yijifenxiaofee1"
            android:textColor="#4a4a4a"
            android:layout_centerVertical="true"
            android:layout_centerHorizontal="true"
            android:textSize="80px"
            android:text="29"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <TextView
            android:textSize="35px"
            android:layout_toEndOf="@+id/yijifenxiaofee1"
            android:layout_alignBottom="@+id/yijifenxiaofee1"
            android:text="星"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <TextView
            android:id="@+id/jjiaoshi"
            android:layout_marginTop="10px"
            android:layout_centerHorizontal="true"
            android:textSize="30px"
            android:layout_marginEnd="10px"
            android:layout_below="@+id/yijifenxiaofee1"
            android:text="一级教师"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
    </RelativeLayout>

<TextView
    android:id="@+id/tachersjibiaozhun"
    android:textSize="30px"
    android:textColor="#9a9a9a"
    android:text="[老师升级标准]"
    android:layout_marginLeft="50px"
    android:layout_marginTop="50px"
    android:layout_alignParentLeft="true"
    android:layout_below="@+id/yijifenxiaolayout1"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content" />
<TextView
    android:id="@+id/textloghost"
    android:layout_marginTop="20px"
    android:layout_alignLeft="@+id/tachersjibiaozhun"
    android:layout_below="@+id/tachersjibiaozhun"
    android:text="111111111111111111111111111111111111111111111111111111"
    android:layout_width="700px"
    android:layout_height="200px" />
    <TextView
        android:layout_centerHorizontal="true"
        android:id="@+id/xuqiufenggexian1"
        android:background="#d7d7d7"
        android:layout_marginTop="20px"
        android:layout_below="@+id/textloghost"
        android:layout_width="700px"
        android:layout_height="1px" />
    <TextView
        android:id="@+id/xuespingjia"
        android:layout_marginLeft="50px"
        android:layout_marginTop="50px"
        android:layout_below="@+id/xuqiufenggexian1"
        android:layout_alignParentLeft="true"
        android:text="学生评价"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
    <TextView
        android:id="@+id/wuxin"
        android:layout_marginTop="36px"
        android:layout_below="@+id/xuespingjia"
        android:layout_toEndOf="@+id/xuespingjia"
        android:textSize="25px"
        android:text="五星"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
    <ProgressBar
        android:id="@+id/jintutiao"
        android:layout_marginBottom="5px"
        android:background="#fff"
        android:layout_marginLeft="24px"
        android:layout_toEndOf="@+id/wuxin"
        style="?android:attr/progressBarStyleHorizontal"
        android:layout_alignBottom="@+id/wuxin"
        android:layout_width="250px"
        android:layout_height="20px" />
    <TextView
        android:layout_marginLeft="24px"
        android:layout_toEndOf="@+id/jintutiao"
        android:layout_alignBottom="@+id/wuxin"
        android:textSize="25px"
        android:text="60%"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
    <TextView
        android:id="@+id/wuxin1"
        android:layout_marginTop="36px"
        android:layout_below="@+id/wuxin"
        android:layout_toEndOf="@+id/xuespingjia"
        android:textSize="25px"
        android:text="四星"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
    <ProgressBar
        android:id="@+id/jintutiao1"
        android:layout_marginBottom="5px"
        android:background="#fff"
        android:layout_marginLeft="24px"
        android:layout_toEndOf="@+id/wuxin1"
        style="?android:attr/progressBarStyleHorizontal"
        android:layout_alignBottom="@+id/wuxin1"
        android:layout_width="250px"
        android:layout_height="20px" />
    <TextView
        android:layout_marginLeft="24px"
        android:layout_toEndOf="@+id/jintutiao"
        android:layout_alignBottom="@+id/wuxin1"
        android:textSize="25px"
        android:text="0%"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
    <TextView
        android:id="@+id/wuxin2"
        android:layout_marginTop="36px"
        android:layout_below="@+id/wuxin1"
        android:layout_toEndOf="@+id/xuespingjia"
        android:textSize="25px"
        android:text="三星"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
    <ProgressBar
        android:id="@+id/jintutiao2"
        android:layout_marginBottom="5px"
        android:background="#fff"
        android:layout_marginLeft="24px"
        android:layout_toEndOf="@+id/wuxin2"
        style="?android:attr/progressBarStyleHorizontal"
        android:layout_alignBottom="@+id/wuxin2"
        android:layout_width="250px"
        android:layout_height="20px" />
    <TextView
        android:layout_marginLeft="24px"
        android:layout_toEndOf="@+id/jintutiao"
        android:layout_alignBottom="@+id/wuxin2"
        android:textSize="25px"
        android:text="0%"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
    <TextView
        android:id="@+id/wuxin3"
        android:layout_marginTop="36px"
        android:layout_below="@+id/wuxin2"
        android:layout_toEndOf="@+id/xuespingjia"
        android:textSize="25px"
        android:text="二星"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
    <ProgressBar
        android:id="@+id/jintutiao3"
        android:layout_marginBottom="5px"
        android:background="#fff"
        android:layout_marginLeft="24px"
        android:layout_toEndOf="@+id/wuxin3"
        style="?android:attr/progressBarStyleHorizontal"
        android:layout_alignBottom="@+id/wuxin3"
        android:layout_width="250px"
        android:layout_height="20px" />
    <TextView
        android:layout_marginLeft="24px"
        android:layout_toEndOf="@+id/jintutiao"
        android:layout_alignBottom="@+id/wuxin3"
        android:textSize="25px"
        android:text="0%"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
    <TextView
        android:id="@+id/wuxin4"
        android:layout_marginTop="36px"
        android:layout_below="@+id/wuxin3"
        android:layout_toEndOf="@+id/xuespingjia"
        android:textSize="25px"
        android:text="一星"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
    <ProgressBar
        android:id="@+id/jintutiao4"
        android:layout_marginBottom="5px"
        android:background="#fff"
        android:layout_marginLeft="24px"
        android:layout_toEndOf="@+id/wuxin4"
        style="?android:attr/progressBarStyleHorizontal"
        android:layout_alignBottom="@+id/wuxin4"
        android:layout_width="250px"
        android:layout_height="20px" />
    <TextView
        android:layout_marginLeft="24px"
        android:layout_toEndOf="@+id/jintutiao"
        android:layout_alignBottom="@+id/wuxin4"
        android:textSize="25px"
        android:text="40%"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

</RelativeLayout>