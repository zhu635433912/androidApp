<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:background="#ffffff"
    android:orientation="vertical"
    android:layout_height="match_parent"
    tools:context="com.deguan.xuelema.androidapp.HonorActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="100px"
        android:orientation="horizontal">
        <RelativeLayout
            android:layout_width="120px"
            android:layout_height="100px">


            <ImageButton
                android:layout_width="30px"
                android:layout_height="40px"
                android:layout_alignParentLeft="true"
                android:layout_alignParentTop="true"
                android:layout_marginLeft="30px"
                android:layout_marginTop="25px"
                android:background="@drawable/add19" />
        <RelativeLayout
            android:id="@+id/honor_back"
            android:layout_width="120px"
            android:layout_height="100px"></RelativeLayout>
        </RelativeLayout>

        <TextView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:layout_weight="1"
            android:gravity="center"
            android:paddingRight="60px"
            android:text="荣誉证书"
            android:textSize="40px" />

        <TextView
            android:id="@+id/honor_save"
            android:layout_width="100px"
            android:layout_height="match_parent"
            android:gravity="center"
            android:text="保存"
            android:textSize="40px" />
    </LinearLayout>

    <View
        android:id="@+id/xuqiufenggexian"
        android:background="#b9b6b6"
        android:layout_width="match_parent"
        android:layout_height="1px" />
    <TextView
        android:text="证书上传"
        android:layout_marginTop="40px"
        android:layout_marginLeft="50px"
        android:textSize="40px"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
    <RelativeLayout
        android:layout_marginLeft="150px"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:orientation="vertical"
            android:layout_marginRight="50px"
            android:layout_marginLeft="30px"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <ImageView
                android:id="@+id/honor_image1"
                android:gravity="center"
                android:src="@drawable/education_edit_bg"
                android:layout_width="match_parent"
                android:layout_height="300px" />

            <ImageView
                android:id="@+id/honor_image2"
                android:layout_marginTop="30px"
                android:gravity="center"
                android:src="@drawable/education_edit_bg"
                android:layout_width="match_parent"
                android:layout_height="300px" />

        </LinearLayout>
        <ImageView
            android:visibility="gone"
            android:id="@+id/honor_add1"
            android:layout_marginTop="95px"
            android:src="@drawable/hly62"
            android:layout_centerHorizontal="true"
            android:layout_width="100px"
            android:layout_height="100px" />
        <ImageView
            android:visibility="gone"

            android:id="@+id/honor_add2"
            android:layout_marginTop="425px"
            android:src="@drawable/hly62"
            android:layout_centerHorizontal="true"
            android:layout_width="100px"
            android:layout_height="100px" />
        <ImageView
            android:visibility="gone"

            android:id="@+id/honor_delete1"
            android:layout_marginTop="15px"
            android:src="@drawable/honor_del"
            android:layout_marginRight="60px"
            android:layout_alignParentRight="true"
            android:layout_width="50px"
            android:layout_height="50px" />
        <ImageView
            android:visibility="gone"

            android:id="@+id/honor_delete2"
            android:layout_marginRight="60px"
            android:layout_alignParentRight="true"
            android:layout_marginTop="355px"
            android:src="@drawable/honor_del"
            android:layout_width="50px"
            android:layout_height="50px" />
    </RelativeLayout>
</LinearLayout>
