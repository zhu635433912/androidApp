<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">
    <RelativeLayout
        android:layout_centerHorizontal="true"
        android:background="@drawable/add08"
        android:layout_width="750px"
        android:layout_height="500px">

        <TextView
            android:layout_marginTop="34px"
            android:layout_marginLeft="46px"
            android:layout_alignParentTop="true"
            android:layout_alignParentLeft="true"
            android:text="取消"
            android:textColor="#b4b4b4"
            android:textSize="35px"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <TextView
            android:id="@+id/feequeding1"
            android:textColor="#f8c968"
            android:layout_marginTop="34px"
            android:layout_marginEnd="46px"
            android:layout_alignParentTop="true"
            android:layout_alignParentEnd="true"
            android:text="确定"
            android:textSize="35px"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <LinearLayout
            android:id="@+id/feefenggexian4"
            android:layout_marginTop="24px"
            android:background="#e6e6e6"
            android:layout_below="@+id/feequeding1"
            android:layout_centerHorizontal="true"
            android:layout_width="732px"
            android:layout_height="1px"
            android:orientation="horizontal">

        </LinearLayout>

        <TextView
            android:id="@+id/feekaihuyh"
            android:layout_marginLeft="30px"
            android:layout_marginTop="30px"
            android:layout_below="@+id/feefenggexian4"
            android:layout_alignParentLeft="true"
            android:textSize="40px"
            android:text="开户银行"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <EditText
            android:background="@null"
            android:layout_marginLeft="40px"
            android:layout_alignBottom="@+id/feekaihuyh"
            android:layout_toEndOf="@+id/feekaihuyh"
            android:layout_width="match_parent"
            android:layout_height="60px" />
        <TextView
            android:id="@+id/feeyhzhanghao"
            android:layout_marginTop="86px"
            android:layout_below="@+id/feekaihuyh"
            android:layout_alignLeft="@+id/feekaihuyh"
            android:textSize="40px"
            android:text="银行账号"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <EditText
            android:background="@null"
            android:layout_marginLeft="40px"
            android:layout_alignBottom="@+id/feeyhzhanghao"
            android:layout_toEndOf="@+id/feeyhzhanghao"
            android:layout_width="match_parent"
            android:layout_height="60px" />
        <TextView
            android:id="@+id/zhuanchufeee"
            android:layout_marginTop="86px"
            android:layout_below="@+id/feeyhzhanghao"
            android:layout_alignLeft="@+id/feeyhzhanghao"
            android:textSize="40px"
            android:text="转出金额"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <EditText
            android:background="@null"
            android:layout_marginLeft="40px"
            android:layout_alignBottom="@+id/zhuanchufeee"
            android:layout_toEndOf="@+id/zhuanchufeee"
            android:layout_width="match_parent"
            android:layout_height="60px" />

    </RelativeLayout>
</RelativeLayout>