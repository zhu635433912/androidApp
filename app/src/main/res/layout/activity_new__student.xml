<?xml version="1.0" encoding="utf-8"?>
<android.support.design.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    >

    <android.support.v4.view.ViewPager
        android:id="@+id/new_student_viewpage"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_behavior="@string/appbar_scrolling_view_behavior">
    </android.support.v4.view.ViewPager>

    <android.support.design.widget.AppBarLayout
        android:id="@+id/app_bar"
        android:layout_width="match_parent"
        android:layout_height="@dimen/y170"
        android:background="#d7cb7f">

        <android.support.design.widget.CollapsingToolbarLayout
            android:id="@+id/toolbar_layout"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            app:contentScrim="#f5ea6b"
            app:layout_scrollFlags="scroll|exitUntilCollapsed|snap"
            app:statusBarScrim="#f5ea6b"
            app:titleEnabled="false">

            <!--android:minHeight="?attr/actionBarSize"-->

            <android.support.v7.widget.Toolbar
                android:id="@+id/toolbar"
                android:layout_width="match_parent"
                android:layout_height="@dimen/y30"
                app:layout_collapseMode="pin" />


            <android.support.design.widget.TabLayout
                android:id="@+id/new_student_tablayout"
                android:layout_width="match_parent"
                android:layout_height="@dimen/y30"
                android:layout_gravity="bottom"
                android:layout_marginTop="20px"
                android:background="#d7cb7f"
                app:tabIndicatorColor="#ff1188"
                app:tabSelectedTextColor="#ff1188"
                app:tabTextColor="#8b8b8b" />

            <RelativeLayout
                android:id="@+id/batahost"
                android:layout_width="match_parent"
                android:layout_height="@dimen/y140"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:layout_alignParentTop="true"
                android:background="@drawable/studentback">
            <ImageView
                android:src="@drawable/my_circle_bg"
                android:layout_width="match_parent"
                android:layout_height="150px"
                android:scaleType="fitXY"
                android:layout_alignParentBottom="true"
                android:layout_marginBottom="80px"
                 />
                <RelativeLayout

                    android:layout_width="0px"
                    android:layout_height="0px"
                    android:layout_alignParentRight="true"
                    android:layout_alignParentTop="true" />

                <ImageView
                    android:id="@+id/techaer_massge"
                    android:layout_width="0px"
                    android:layout_height="0px"
                    android:padding="35px"
                    android:src="@drawable/hly005" />

                <ImageView
                    android:id="@+id/student_chat"
                    android:layout_width="0px"
                    android:layout_height="0px"
                    android:layout_toRightOf="@+id/techaer_massge"
                    android:padding="35px"
                    android:src="@drawable/chat_icon" />

                <TextView
                    android:id="@+id/unread_address_number"
                    android:layout_width="0dp"
                    android:layout_height="0dp"
                    android:layout_marginLeft="100px"
                    android:layout_marginRight="100px"
                    android:layout_marginTop="30px"
                    android:gravity="center"
                    android:text="2"
                    android:textSize="10sp"
                    android:visibility="gone" />

                <ImageView
                    android:id="@+id/student_my"
                    android:layout_width="0px"
                    android:layout_height="0px"
                    android:layout_toRightOf="@+id/student_chat"
                    android:padding="35px"
                    android:src="@drawable/chat_my_icon" />

                <TextView
                    android:id="@+id/unread_message_number"
                    android:layout_width="0dp"
                    android:layout_height="0dp"
                    android:layout_marginLeft="200px"
                    android:layout_marginRight="100px"
                    android:layout_marginTop="30px"
                    android:gravity="center"
                    android:text="2"
                    android:textSize="10sp"
                    android:visibility="gone" />

                <RelativeLayout

                    android:layout_width="0px"
                    android:layout_height="0px"
                    android:layout_alignParentTop="true"
                    android:layout_toLeftOf="@+id/studentwodeqianbao" />

                <ImageButton
                    android:layout_width="0px"
                    android:layout_height="0px"
                    android:layout_alignParentRight="true"
                    android:layout_alignParentTop="true"
                    android:layout_marginRight="40px"
                    android:layout_marginTop="35px"
                    android:background="@drawable/hly20" />

                <ImageButton
                    android:layout_width="0px"
                    android:layout_height="0px"
                    android:layout_alignTop="@+id/stidentshezhiimabt"
                    android:layout_marginRight="40px"
                    android:layout_marginTop="35px"
                    android:layout_toLeftOf="@+id/studentwodeqianbao"
                    android:background="@drawable/hly17" />
                <ImageView
                    android:src="@drawable/teahcer_head_bg"
                    android:padding="5px"
                    android:layout_marginTop="80px"
                    android:layout_centerHorizontal="true"
                    android:layout_width="220px"
                    android:layout_height="220px" />
                <com.facebook.drawee.view.SimpleDraweeView
                    app:roundAsCircle="true"
                    app:actualImageScaleType="focusCrop"
                    android:id="@+id/studenttouxiangimg"
                    android:layout_width="200px"
                    android:layout_height="200px"
                    android:layout_alignParentTop="true"
                    android:layout_centerHorizontal="true"
                    android:layout_marginTop="90px"
                    app:placeholderImage="@drawable/hold_head"
                    />
                <TextView
                    android:id="@+id/student_text"
                    android:layout_centerHorizontal="true"
                    android:text=" "
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />


                <TextView
                    android:id="@+id/studentxxitexutview"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignTop="@+id/studenttouxiangimg"
                    android:layout_marginRight="120px"
                    android:layout_marginTop="55px"
                    android:layout_toLeftOf="@+id/studenttouxiangimg"
                    android:text="0"
                    android:textColor="#8c9193"
                    android:textSize="40px"
                    android:visibility="gone" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/studentxxitexutview"
                    android:layout_marginRight="100px"
                    android:layout_toLeftOf="@+id/studenttouxiangimg"
                    android:text="消息"
                    android:textColor="#6c7070"
                    android:textSize="30px"
                    android:visibility="gone" />

                <TextView
                    android:id="@+id/studenthuihuatext"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignTop="@+id/studenttouxiangimg"
                    android:layout_marginLeft="120px"
                    android:layout_marginTop="55px"
                    android:layout_toRightOf="@+id/studenttouxiangimg"
                    android:text=""
                    android:textColor="#6c7070"
                    android:textSize="35px" />

                <ImageView
                    android:id="@+id/chat_icon"
                    android:layout_width="0px"
                    android:layout_height="0px"
                    android:layout_below="@+id/studenthuihuatext"
                    android:layout_marginLeft="95px"
                    android:layout_toRightOf="@+id/studenttouxiangimg"
                    android:src="@mipmap/chat_icon" />
                <!--<TextView-->
                <!--android:layout_marginLeft="155px"-->
                <!--android:layout_toRightOf="@+id/studenttouxiangimg"-->
                <!--android:layout_below="@+id/studenthuihuatext"-->
                <!--android:id="@+id/unread_address_number"-->
                <!--android:layout_width="20px"-->
                <!--android:layout_height="20px"-->
                <!--android:background="@drawable/em_unread_dot"-->
                <!--android:visibility="gone" />-->
                <TextView
                    android:id="@+id/huihua"
                    android:layout_width="0px"
                    android:layout_height="0px"
                    android:layout_below="@+id/chat_icon"
                    android:layout_marginLeft="45px"
                    android:layout_toRightOf="@+id/studenttouxiangimg"
                    android:gravity="center"
                    android:paddingBottom="50px"
                    android:text="聊天管理"
                    android:textColor="#6c7070"
                    android:textSize="35px" />

                <TextView
                    android:id="@+id/stidentshezhiimabt"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_alignParentTop="true"
                    android:layout_margin="30px"
                    android:text="设置"
                    android:textSize="35px" />

                <TextView
                    android:id="@+id/studentusernametext"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/studenttouxiangimg"
                    android:layout_centerHorizontal="true"
                    android:layout_marginTop="24px"
                    android:textColor="#6c7070"
                    android:textSize="40px" />

                <ImageView
                    android:id="@+id/student_manager_image"
                    android:layout_width="120px"
                    android:layout_height="120px"
                    android:layout_marginLeft="27dp"
                    android:src="@drawable/user_person"
                    android:layout_alignTop="@+id/studentwodeqianbao"
                    android:layout_toRightOf="@+id/techaer_massge"
                    android:layout_toEndOf="@+id/techaer_massge"
                    android:layout_marginStart="27dp" />

                <ImageView
                    android:id="@+id/studentwodeqianbao"
                    android:layout_width="120px"
                    android:layout_height="120px"
                    android:layout_alignParentRight="true"
                    android:layout_alignParentBottom="true"
                    android:layout_marginRight="60px"
                    android:layout_marginBottom="120px"
                    android:src="@drawable/teacher_money_icon"
                    />

                <TextView
                    android:background="#efefef"
                    android:id="@+id/studentneirongtext"
                    android:layout_width="match_parent"
                    android:layout_height="80px"
                    android:layout_alignParentBottom="true"
                    android:layout_marginTop="10px"
                    android:gravity="center"
                    android:text="书山有路勤为径，勤飞笨鸟先入林"
                    android:textColor="#6c7070"
                    android:textSize="30px" />
            </RelativeLayout>
        </android.support.design.widget.CollapsingToolbarLayout>
    </android.support.design.widget.AppBarLayout>

</android.support.design.widget.CoordinatorLayout>