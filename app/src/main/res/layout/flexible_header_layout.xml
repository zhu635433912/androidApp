<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="@dimen/header_height"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <ImageView
        android:id="@+id/iv"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scaleType="centerCrop"
        android:src="@drawable/add11" />

    <com.facebook.drawee.view.SimpleDraweeView
        app:roundAsCircle="true"
        android:id="@+id/teacher_head_image"
        android:layout_marginTop="120px"
        android:layout_gravity="center_horizontal|bottom"
        app:actualImageScaleType="focusCrop"
        android:layout_marginBottom="170px"
        app:placeholderImage="@drawable/ox2"
        android:layout_width="110px"
        android:layout_height="110px" />
    <ImageView
        android:id="@+id/teacher_gender_image"
        android:layout_marginLeft="30px"
        android:layout_marginBottom="170px"
        android:layout_gravity="center_horizontal|bottom"
        android:src="@mipmap/teacher_male"
        android:layout_width="30px"
        android:layout_height="30px" />

    <TextView
        android:textStyle="bold"
        android:id="@+id/teacher_nickname_tv"
        android:layout_marginBottom="120px"
        android:textColor="#545353"
        android:textSize="33px"
        android:layout_gravity="center_horizontal|bottom"
        android:text=""
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
    <TextView
        android:textSize="28px"
        android:layout_marginBottom="80px"
        android:layout_gravity="center_horizontal|bottom"
        android:layout_below="@+id/gerxxname"
        android:textColor="#545353"
        android:text=""
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/teacher_sign_tv" />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="60px"
        android:layout_gravity="bottom"
        android:background="#33333333"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/teacher_student_number"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:text="学生"
            android:gravity="center"
            android:textColor="@android:color/white" />

        <View
            android:layout_width="1dp"
            android:layout_height="20dp"
            android:background="#ffffff" />

        <TextView
            android:id="@+id/teacher_order_number"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:text="订单"
            android:gravity="center"
            android:textColor="@android:color/white" />

        <View
            android:layout_width="1dp"
            android:layout_height="20dp"
            android:background="#ffffff" />

        <TextView
            android:id="@+id/teacher_complete_number"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:text="成交率"
            android:gravity="center"
            android:textColor="@android:color/white" />


    </LinearLayout>
</FrameLayout>