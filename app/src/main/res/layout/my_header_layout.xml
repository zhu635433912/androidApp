<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="@dimen/header_height"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <ImageView
        android:id="@+id/iv"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scaleType="centerCrop"
        android:src="@mipmap/my_bg" />
    <ImageView
        android:scaleType="fitEnd"
        android:src="@drawable/studentback"
        android:layout_gravity="bottom"
        android:layout_marginBottom="80px"
        android:layout_width="match_parent"
        android:layout_height="200dp" />
    <ImageView
        android:scaleType="fitXY"
        android:src="@mipmap/my_circle_bg"
        android:layout_gravity="bottom"
        android:layout_width="match_parent"
        android:layout_height="180px" />
    <ImageView
        android:src="@drawable/teahcer_head_bg"
        android:layout_gravity="center_horizontal|bottom"
        android:layout_marginBottom="140px"
        android:layout_centerHorizontal="true"
        android:layout_width="160px"
        android:layout_height="160px" />
    <com.facebook.drawee.view.SimpleDraweeView
        app:roundAsCircle="true"
        android:id="@+id/my_head_image"
        android:layout_marginTop="120px"
        android:layout_gravity="center_horizontal|bottom"
        app:actualImageScaleType="focusCrop"
        android:layout_marginBottom="145px"
        app:placeholderImage="@drawable/ox2"
        android:layout_width="150px"
        android:layout_height="150px" />
    <ImageView
        android:id="@+id/head_vip_image"
        android:visibility="gone"
        android:layout_marginTop="120px"
        android:layout_marginBottom="145px"
        android:src="@mipmap/vip1_icon"
        android:layout_marginLeft="50px"
        android:layout_gravity="center_horizontal|bottom"
        android:layout_width="50px"
        android:layout_height="50px" />
    <ProgressBar
        android:visibility="gone"
        android:id="@+id/my_progress_bar"
        android:layout_width="60px"
        android:layout_height="60px" />
    <ImageView
        android:id="@+id/my_manager_image"
        android:layout_width="100px"
        android:layout_height="100px"
        android:layout_gravity="bottom"
        android:layout_alignParentLeft="true"
        android:layout_marginBottom="120px"
        android:layout_marginLeft="60px"
        android:src="@drawable/teacher_renzhen" />
    <ImageView
        android:id="@+id/my_fee_image"
        android:layout_width="100px"
        android:layout_height="100px"
        android:layout_gravity="bottom|right"
        android:layout_marginBottom="120px"
        android:layout_marginRight="60px"
        android:src="@drawable/teacher_money_icon" />
        <TextView
            android:text="设置"
            android:textSize="35px"
            android:layout_gravity="right"
            android:layout_margin="30px"
            android:id="@+id/my_set_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
    <LinearLayout
        android:layout_gravity="center_horizontal|bottom"
        android:orientation="horizontal"
        android:gravity="center"
        android:layout_marginBottom="80px"
        android:layout_width="match_parent"
        android:layout_height="60px">
        <TextView
            android:id="@+id/my_nickname_tv"
            android:textColor="#3b3b3b"
            android:textSize="38px"
            android:textStyle="bold"
            android:text="2222222222"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <ImageView
            android:id="@+id/vip_image"
            android:src="@mipmap/isvip_icon"
            android:layout_marginLeft="20px"
            android:layout_width="wrap_content"
            android:layout_height="match_parent" />
    </LinearLayout>


    <TextView
        android:textSize="30px"
        android:layout_marginBottom="30px"
        android:layout_gravity="center_horizontal|bottom"
        android:layout_below="@+id/gerxxname"
        android:textColor="#8d8d8d"
        android:text="书山有路勤为径，勤飞笨鸟先入林"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/my_sign_tv" />
    <TextView
        android:textSize="18px"
        android:id="@+id/my_look_tv"
        android:text=""
        android:layout_gravity="bottom|center_horizontal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
</FrameLayout>