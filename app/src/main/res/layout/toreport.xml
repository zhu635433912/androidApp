<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
     android:layout_width="match_parent"
    android:layout_height="match_parent">
    <ImageButton
        android:id="@+id/jubaofanhui"
        android:layout_marginLeft="30px"
        android:layout_marginTop="20px"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:background="@drawable/add19"
        android:layout_width="20px"
        android:layout_height="30px" />

    <TextView
        android:textSize="30px"
        android:layout_marginTop="20px"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:text="举报内容"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
    <TextView
        android:id="@+id/xuqiufenggexian"
        android:background="#d7d7d7"
        android:layout_marginTop="80px"
        android:layout_below="@+id/neirongtext"
        android:layout_width="match_parent"
        android:layout_height="1px" />

    <EditText
        android:paddingTop="10px"
        android:layout_marginTop="20px"
        android:layout_centerHorizontal="true"
        android:background="@drawable/gerxxkk"
        android:id="@+id/jubaoneirong"
        android:hint="   详细说点什么"
        android:textSize="30px"
        android:enabled="true"
        android:gravity="top"
        android:minLines="8"
        android:maxLines="10"
        android:scrollbars="vertical"
        android:inputType="textLongMessage"
        android:layout_below="@+id/xuqiufenggexian"
        android:layout_width="700px"
        android:layout_height="370px" />
    <TextView
        android:layout_marginBottom="10px"
        android:layout_marginEnd="10px"
        android:layout_alignEnd="@+id/jubaoneirong"
        android:layout_alignBottom="@+id/jubaoneirong"
        android:text="0/500"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
    <Button
        android:textSize="35px"
        android:textColor="#fff"
        android:text="提交"
        android:background="@drawable/add15"
        android:layout_marginBottom="50px"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_width="650px"
        android:layout_height="80px" />
    
</RelativeLayout>