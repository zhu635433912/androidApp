<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
     android:layout_width="match_parent"
    android:layout_height="match_parent">
    <modle.toos.CircleImageView
        android:id="@+id/evaluattoux"
        android:layout_marginTop="50px"
        android:layout_alignParentTop="true"
        android:layout_marginLeft="50px"
        android:layout_alignParentLeft="true"
        android:src="@drawable/ox2"
        android:layout_width="80px"
        android:layout_height="80px" />
    <TextView
        android:id="@+id/pinlunname"
        android:layout_marginBottom="27px"
        android:textSize="25px"
        android:layout_marginLeft="30px"
        android:layout_toEndOf="@+id/evaluattoux"
        android:layout_alignBottom="@+id/evaluattoux"
        android:text="孺子牛教育"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
    <TextView
        android:textSize="30px"
        android:id="@+id/pinlunneirong"
        android:layout_marginTop="20px"
        android:layout_alignLeft="@+id/evaluattoux"
        android:layout_below="@+id/evaluattoux"
        android:text="英语考试在即，希望六级过了的老师提供学习上的帮助，补助三节课"
        android:layout_width="600px"
        android:layout_height="90px" />
    <TextView
        android:id="@+id/pinglunshijian"
        android:textSize="20px"
        android:layout_marginTop="16px"
        android:layout_below="@+id/pinlunneirong"
        android:layout_alignLeft="@+id/evaluattoux"
        android:text="2016-05-30 03.21"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
    <TextView
        android:id="@+id/pinglunkemu"
        android:layout_marginLeft="8px"
        android:layout_toEndOf="@+id/pinglunshijian"
        android:layout_alignBottom="@+id/pinglunshijian"
        android:textSize="20px"
        android:text="英语"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
    <TextView
        android:layout_marginLeft="8px"
        android:layout_toEndOf="@+id/pinglunkemu"
        android:layout_alignBottom="@+id/pinglunshijian"
        android:textSize="20px"
        android:text="初中"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
    <TextView
        android:id="@+id/pinglunxinyu"
        android:layout_marginEnd="50px"
        android:layout_alignBottom="@+id/pinlunname"
        android:layout_alignParentEnd="true"
        android:textSize="20px"
        android:text="4.0"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
    <ImageView
        android:layout_marginBottom="3px"
        android:layout_marginEnd="20px"
        android:layout_toLeftOf="@+id/pinglunxinyu"
        android:layout_alignBottom="@+id/pinglunxinyu"
        android:src="@drawable/four"
        android:layout_width="100px"
        android:layout_height="20px" />
    <TextView
        android:id="@+id/xuqiufenggexian1"
        android:layout_width="650px"
        android:layout_height="1px"
        android:layout_below="@+id/pinglunshijian"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="26px"
        android:background="#d7d7d7" />
</RelativeLayout>