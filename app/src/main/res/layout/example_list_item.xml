<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:background="#ffffff"
    android:layout_marginBottom="30px"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <LinearLayout
        android:layout_marginTop="30px"
        android:layout_marginLeft="40px"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="100px">
        <com.facebook.drawee.view.SimpleDraweeView
            app:roundAsCircle="true"
            android:id="@+id/example_head_image"
            android:layout_gravity="center"
            android:src="@drawable/hold_head"
            android:layout_width="80px"
            android:layout_height="80px" />
        <TextView
            android:id="@+id/example_nickname_tv"
            android:layout_margin="20px"
            android:text="总小微"
            android:textSize="35px"
            android:gravity="center_vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent" />
    </LinearLayout>
    <TextView
        android:id="@+id/example_course_tv"
        android:textColor="#878787"
        android:layout_marginLeft="50px"
        android:layout_marginTop="20px"
        android:textSize="25px"
        android:text="2017-08-26    初中    数学    学生上门"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />
    <TextView
        android:id="@+id/example_desc_tv"
        android:textColor="#646464"
        android:layout_marginLeft="50px"
        android:layout_marginTop="20px"
        android:textSize="30px"
        android:text="本节课主要讲解了评价"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />
    <LinearLayout
        android:layout_marginBottom="30px"
        android:id="@+id/example_image_ll"
        android:layout_marginTop="30px"
        android:layout_marginRight="50px"
        android:layout_marginLeft="50px"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <com.facebook.drawee.view.SimpleDraweeView
            android:id="@+id/example_image1"
            android:layout_width="0dp"
            android:scaleType="fitXY"
            android:layout_weight="1"
            android:adjustViewBounds="true"
            android:layout_height="150px"/>
        <com.facebook.drawee.view.SimpleDraweeView
            android:id="@+id/example_image2"
            android:adjustViewBounds="true"
            android:layout_marginLeft="20px"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:scaleType="fitXY"
            android:layout_height="150px" />
        <com.facebook.drawee.view.SimpleDraweeView
            android:id="@+id/example_image3"
            android:layout_marginLeft="20px"
            android:scaleType="fitXY"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="150px" />
        <com.facebook.drawee.view.SimpleDraweeView
            android:id="@+id/example_image4"
            android:layout_marginLeft="20px"
            android:scaleType="fitXY"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="150px" />
    </LinearLayout>

</LinearLayout>