<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:background="#e0eaf1"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <com.wang.avi.AVLoadingIndicatorView
        android:id="@+id/xuqiushuax"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        app:indicator_color="#f7e61c"
        app:indicator="LineSpinFadeLoader"
        android:layout_width="120px"
        android:layout_height="120px" />

    <RelativeLayout
        android:id="@+id/xuqiurelayout"
        android:layout_width="match_parent"
        android:layout_height="540px">
        <ImageView
            android:scaleType="fitXY"
            android:src="@drawable/demand_background"
            android:layout_width="match_parent"
            android:layout_height="match_parent" />
        <RelativeLayout
            android:id="@+id/xuqiufanhui"
            android:layout_width="120px"
            android:layout_height="120px">
        </RelativeLayout>
        <ImageButton
            android:layout_marginTop="25px"
            android:layout_marginLeft="35px"
            android:layout_alignParentLeft="true"
            android:layout_alignParentTop="true"
            android:background="@drawable/demand_back"
            android:layout_width="50px"
            android:layout_height="50px" />
        <TextView
            android:id="@+id/xuqiuxiangxi"
            android:layout_marginTop="20px"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:textSize="40px"
            android:textColor="#403f3f"
            android:text="需求详细"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <TextView
            android:id="@+id/kemuleibie"
            android:layout_marginTop="14px"
            android:text=""
            android:layout_marginLeft="260px"
            android:textColor="#403f3f"
            android:layout_below="@+id/xuqiuxiangxi"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <TextView
            android:id="@+id/nianjia"
            android:textColor="#403f3f"
            android:text="一年级"
            android:layout_centerHorizontal="true"
            android:layout_alignBottom="@+id/kemuleibie"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <ImageView
            android:id="@+id/xuqiuimage"
            android:layout_below="@+id/nianjia"
            android:layout_centerHorizontal="true"
            android:src="@drawable/ox2"
            android:scaleType="centerInside"
            android:layout_marginTop="20px"
            android:layout_width="120px"
            android:layout_height="120px" />
        <TextView
            android:id="@+id/xuqiuname"
            android:layout_below="@+id/xuqiuimage"
            android:layout_centerHorizontal="true"
            android:textSize="35px"
            android:textColor="#403f3f"
            android:text="德冠教育"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <TextView
            android:id="@+id/xuqiuneirong"
            android:layout_marginTop="30px"
            android:layout_below="@+id/xuqiuname"
            android:layout_centerHorizontal="true"
            android:textSize="25px"
            android:textColor="#403f3f"
            android:scrollbars="vertical"
            android:maxLines="4"
            android:text=""
            android:layout_width="600px"
            android:layout_height="150px" />

        <!--<ImageView-->
            <!--android:id="@+id/xuqiuimage"-->
            <!--android:layout_below="@+id/xuqiuneirong"-->
            <!--android:layout_centerHorizontal="true"-->
            <!--android:src="@drawable/ox2"-->
            <!--android:layout_marginTop="8px"-->
            <!--android:layout_width="120px"-->
            <!--android:layout_height="120px" />-->
        <!--<TextView-->
            <!--android:id="@+id/xuqiuname"-->
            <!--android:layout_below="@+id/xuqiuimage"-->
            <!--android:layout_centerHorizontal="true"-->
            <!--android:textSize="35px"-->
            <!--android:textColor="#fff"-->
            <!--android:text="孺子牛教育"-->
            <!--android:layout_width="wrap_content"-->
            <!--android:layout_height="wrap_content" />-->
        <TextView
            android:id="@+id/fabushijian"
            android:layout_marginRight="28px"
            android:layout_marginBottom="20px"
            android:layout_alignParentRight="true"
            android:layout_alignParentBottom="true"
            android:textColor="#403f3f"
            android:textSize="30px"
            android:text="2016-7-25"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
    </RelativeLayout>
    <TextView
        android:id="@+id/tadfexuqiu"
        android:textColor="#f98c26"
        android:layout_marginLeft="40px"
        android:layout_alignParentLeft="true"
        android:layout_marginTop="10px"
        android:layout_below="@+id/xuqiurelayout"
        android:textSize="30px"
        android:text="对老师的要求"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
    <TextView
        android:id="@+id/xuqiu_tel_tv"
        android:text="11111"
        android:visibility="gone"
        android:layout_marginLeft="40px"
        android:layout_toRightOf="@+id/tadfexuqiu"
        android:layout_marginTop="10px"
        android:layout_below="@+id/xuqiurelayout"
        android:textSize="30px"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
    <TextView
        android:id="@+id/jiequxuqiu"
        android:textColor="#65c2fe"
        android:layout_marginTop="10px"
        android:layout_marginRight="40px"
        android:layout_alignParentRight="true"
        android:layout_below="@+id/xuqiurelayout"
        android:textSize="30px"
        android:text="暂未接取"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
    <LinearLayout
        android:id="@+id/fengexian1"
        android:layout_marginTop="10px"
        android:layout_below="@+id/tadfexuqiu"
        android:layout_centerHorizontal="true"
        android:background="#b3b0b0"
        android:layout_width="710px"
        android:layout_height="2px"
        android:orientation="horizontal" />
    <RelativeLayout
        android:id="@+id/xuqiurelayout1"
        android:layout_below="@id/fengexian1"
        android:layout_width="187.5px"
        android:layout_height="130px">
        <ImageView
            android:layout_marginTop="10px"
            android:layout_centerHorizontal="true"
            android:id="@+id/xuqiubenke"
            android:background="@drawable/hly47"
            android:layout_width="65px"
            android:layout_height="65px" />
        <TextView
            android:id="@+id/xuqiu_xueli_tv"
            android:textSize="30px"
            android:layout_centerHorizontal="true"
            android:layout_below="@+id/xuqiubenke"
            android:layout_marginTop="10px"
            android:text="学历不限"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
    </RelativeLayout>
    <RelativeLayout
        android:id="@+id/fengexian2"
        android:layout_toRightOf="@+id/xuqiurelayout1"
        android:layout_below="@id/fengexian1"
        android:layout_width="187.5px"
        android:layout_height="130px">
        <ImageView
            android:layout_marginTop="10px"
            android:layout_centerHorizontal="true"
            android:id="@+id/xuqiushangmen"
            android:background="@drawable/hly57"
            android:layout_width="65px"
            android:layout_height="65px" />
        <TextView
            android:id="@+id/fuwufang"
            android:textSize="30px"
            android:layout_centerHorizontal="true"
            android:layout_below="@+id/xuqiushangmen"
            android:layout_marginTop="10px"
            android:text="教师上门"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/fengexian3"
        android:layout_width="187.5px"
        android:layout_height="130px"
        android:layout_below="@id/fengexian1"
        android:layout_toRightOf="@+id/fengexian2">
        <ImageView
            android:layout_marginTop="10px"
            android:layout_centerHorizontal="true"
            android:id="@+id/xuqiuxinbie"
            android:background="@drawable/hly61"
            android:layout_width="65px"
            android:layout_height="65px" />
        <TextView
            android:id="@+id/xingbie"
            android:layout_marginTop="10px"
            android:layout_centerHorizontal="true"
            android:textSize="30px"
            android:layout_below="@+id/xuqiuxinbie"
            android:text="女性"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
    </RelativeLayout>
    <RelativeLayout
        android:id="@+id/fengexian4"
        android:layout_width="187.5px"
        android:layout_height="130px"
        android:layout_below="@id/fengexian1"
        android:layout_toRightOf="@+id/fengexian3">
        <ImageView
            android:layout_marginTop="10px"
            android:layout_centerHorizontal="true"
            android:id="@+id/xuqiunianl"
            android:background="@drawable/hly65"
            android:layout_width="65px"
            android:layout_height="65px" />
        <TextView
            android:id="@+id/nianling"
            android:layout_marginTop="10px"
            android:layout_centerHorizontal="true"
            android:textSize="30px"
            android:layout_below="@+id/xuqiunianl"
            android:text="20-30岁"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
    </RelativeLayout>
    <LinearLayout
        android:id="@+id/fengexianbottton"
        android:layout_marginTop="10px"
        android:layout_below="@+id/xuqiurelayout1"
        android:layout_centerHorizontal="true"
        android:background="#c4c3c3"
        android:layout_width="710px"
        android:layout_height="2px"
        android:orientation="horizontal" />
        <TextView
            android:id="@+id/shijianduan"
            android:textSize="30px"
            android:layout_marginLeft="80px"
            android:layout_marginTop="10px"
            android:layout_alignParentLeft="true"
            android:layout_below="@id/fengexianbottton"
            android:text="9:30-12:30"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
    <LinearLayout
        android:id="@+id/zhongjianfenge"
        android:background="#b3adad"
        android:layout_centerHorizontal="true"
        android:layout_below="@id/fengexianbottton"
        android:layout_width="2px"
        android:layout_height="40px"
        android:orientation="horizontal"/>
     <TextView
         android:id="@+id/diqu"
         android:layout_marginLeft="1px"
         android:layout_marginTop="10px"
         android:textSize="25px"

         android:layout_toRightOf="@id/zhongjianfenge"
         android:layout_below="@id/fengexianbottton"
         android:layout_width="wrap_content"
         android:layout_height="wrap_content" />
    <LinearLayout
        android:id="@+id/fengexianbottton1"
        android:layout_marginTop="10px"
        android:layout_below="@+id/zhongjianfenge"
        android:layout_centerHorizontal="true"
        android:background="#bab8b8"
        android:layout_width="710px"
        android:layout_height="2px"
        android:orientation="horizontal" />
    <TextView
        android:id="@+id/xiangsixuqiu"
        android:textColor="#f98c26"
        android:layout_marginLeft="40px"
        android:layout_marginTop="10px"
        android:layout_alignParentLeft="true"
        android:layout_below="@id/fengexianbottton1"
        android:text="相似需求"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <com.handmark.pulltorefresh.library.PullToRefreshListView
        android:layout_marginTop="20px"
        android:id="@+id/xiangsixuqiulist"
        android:layout_below="@+id/xiangsixuqiu"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"/>
    <ImageButton
        android:id="@+id/bohao"
        android:layout_marginRight="50px"
        android:layout_marginBottom="50px"
        android:layout_alignParentBottom="true"
        android:layout_alignParentRight="true"
        android:background="@drawable/hly44"
        android:layout_width="80px"
        android:layout_height="80px" />
    <ImageButton
        android:id="@+id/xuqiuweix"
        android:layout_marginRight="50px"
        android:layout_marginBottom="50px"
        android:layout_toLeftOf="@+id/bohao"
        android:layout_alignParentBottom="true"
        android:background="@drawable/hly49"
        android:layout_width="80px"
        android:layout_height="80px" />

    <ImageButton
        android:id="@+id/add_friend"
        android:layout_marginRight="40px"
        android:layout_toLeftOf="@+id/xuqiuweix"
        android:background="@drawable/hly33"
        android:layout_alignBottom="@+id/xuqiuweix"
        android:layout_width="80px"
        android:layout_height="80px" />
    <ImageButton
        android:id="@+id/xuqiudianh"
        android:layout_marginLeft="40px"
        android:layout_alignBottom="@+id/xuqiuweix"
        android:layout_alignParentLeft="true"
        android:background="@drawable/order02"
        android:layout_width="80px"
        android:layout_height="80px" />
</RelativeLayout>