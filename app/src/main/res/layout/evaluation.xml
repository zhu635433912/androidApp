<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <RelativeLayout
        android:id="@+id/pingjiafanhui"
        android:layout_width="100px"
        android:layout_height="80px"></RelativeLayout>
    <ImageButton
        android:layout_width="20px"
        android:layout_height="30px"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_marginLeft="30px"
        android:layout_marginTop="20px"
        android:background="@drawable/add19" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20px"
        android:text="个人评价"
        android:textSize="30px" />

    <TextView
        android:id="@+id/xuqiufenggexian"
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:layout_below="@+id/neirongtext"
        android:layout_marginTop="80px"
        android:background="#d7d7d7" />


    <ImageButton
        android:id="@+id/imageButton"
        android:layout_width="80px"
        android:layout_height="80px"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_marginBottom="10px"
        android:layout_marginLeft="20px"
        android:background="@drawable/hly33" />

    <ImageButton
        android:layout_width="80px"
        android:layout_height="80px"
        android:layout_alignParentBottom="true"
        android:layout_alignParentEnd="true"
        android:layout_marginBottom="10px"
        android:layout_marginEnd="20px"
        android:background="@drawable/hly44" />

    <ImageButton
        android:id="@+id/imageButton2"
        android:layout_width="320px"
        android:layout_height="100px"
        android:layout_alignTop="@+id/imageButton"
        android:layout_centerHorizontal="true"
        android:background="@drawable/hly02" />

    <RelativeLayout
        android:layout_below="@+id/pingjiafanhui"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#e0eaf1"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true">

        <RelativeLayout
            android:id="@+id/gerxxrelayout"
            android:layout_width="730px"
            android:layout_height="1100px"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="34px"
            android:background="@drawable/mask">

            <TextView

                android:id="@+id/gerenjianjie"
                android:layout_width="150px"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_alignParentTop="true"
                android:layout_marginLeft="50px"
                android:layout_marginTop="40px"
                android:text=""
                android:textSize="35px" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignBottom="@+id/gerenjianjie"
                android:layout_marginLeft="40px"
                android:layout_toEndOf="@+id/gerenjianjie"
                android:text="评价"
                android:textSize="35px" />

            <TextView
                android:id="@+id/xuqiufenggexian1"
                android:layout_width="650px"
                android:layout_height="1px"
                android:layout_below="@+id/gerenjianjie"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="26px"
                android:background="#d7d7d7" />

            <ImageView
                android:id="@+id/xinyuxinji"
                android:layout_marginLeft="220px"
                android:layout_alignParentLeft="true"
                android:layout_marginTop="36px"
                android:layout_below="@+id/xuqiufenggexian1"
                android:background="@drawable/four"
                android:layout_width="220px"
                android:layout_height="30px" />
            <TextView
                android:id="@+id/pingjiafenshu"
                android:layout_marginLeft="20px"
                android:layout_toEndOf="@+id/xinyuxinji"
                android:layout_alignTop="@+id/xinyuxinji"
                android:textSize="27px"
                android:text="4.0"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
            <TextView
                android:id="@+id/wuxin"
                android:layout_marginTop="36px"
                android:layout_below="@+id/xinyuxinji"
                android:layout_toEndOf="@+id/gerenjianjie"
                android:textSize="25px"
                android:text="五星"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
            <ImageView
                android:id="@+id/jintutiao"
                android:layout_marginBottom="5px"
                android:layout_marginLeft="24px"
                android:src="@drawable/five"
                android:layout_toEndOf="@+id/wuxin"
                android:layout_alignBottom="@+id/wuxin"
                android:layout_width="250px"
                android:layout_height="30px" />
            <TextView
                android:id="@+id/pingjia1"
                android:layout_marginLeft="24px"
                android:layout_toEndOf="@+id/jintutiao"
                android:layout_alignBottom="@+id/wuxin"
                android:textSize="25px"
                android:text=""
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
            <TextView
                android:id="@+id/wuxin1"
                android:layout_marginTop="36px"
                android:layout_below="@+id/wuxin"
                android:layout_toEndOf="@+id/gerenjianjie"
                android:textSize="25px"
                android:text="四星"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
            <ImageView
                android:id="@+id/jintutiao1"
                android:layout_marginBottom="5px"
                android:layout_marginLeft="24px"
                android:src="@drawable/four"
                android:layout_toEndOf="@+id/wuxin1"
                android:layout_alignBottom="@+id/wuxin1"
                android:layout_width="250px"
                android:layout_height="30px" />
            <TextView
                android:id="@+id/pingjia2"
                android:layout_marginLeft="24px"
                android:layout_toEndOf="@+id/jintutiao"
                android:layout_alignBottom="@+id/wuxin1"
                android:textSize="25px"
                android:text=""
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
            <TextView
                android:id="@+id/wuxin2"
                android:layout_marginTop="36px"
                android:layout_below="@+id/wuxin1"
                android:layout_toEndOf="@+id/gerenjianjie"
                android:textSize="25px"
                android:text="三星"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
            <ImageView
                android:id="@+id/jintutiao2"
                android:layout_marginBottom="5px"
                android:layout_marginLeft="24px"
                android:src="@drawable/three"
                android:layout_toEndOf="@+id/wuxin2"
                android:layout_alignBottom="@+id/wuxin2"
                android:layout_width="250px"
                android:layout_height="30px" />
            <TextView
                android:id="@+id/pingjia3"
                android:layout_marginLeft="24px"
                android:layout_toEndOf="@+id/jintutiao"
                android:layout_alignBottom="@+id/wuxin2"
                android:textSize="25px"
                android:text=""
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
            <TextView
                android:id="@+id/wuxin3"
                android:layout_marginTop="36px"
                android:layout_below="@+id/wuxin2"
                android:layout_toEndOf="@+id/gerenjianjie"
                android:textSize="25px"
                android:text="二星"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
            <ImageView
                android:id="@+id/jintutiao3"
                android:layout_marginBottom="5px"
                android:src="@drawable/two"
                android:layout_marginLeft="24px"
                android:layout_toEndOf="@+id/wuxin3"
                android:layout_alignBottom="@+id/wuxin3"
                android:layout_width="250px"
                android:layout_height="30px" />
            <TextView
                android:id="@+id/pingjia4"
                android:layout_marginLeft="24px"
                android:layout_toEndOf="@+id/jintutiao"
                android:layout_alignBottom="@+id/wuxin3"
                android:textSize="25px"
                android:text=""
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
            <TextView
                android:id="@+id/wuxin4"
                android:layout_marginTop="36px"
                android:layout_below="@+id/wuxin3"
                android:layout_toEndOf="@+id/gerenjianjie"
                android:textSize="25px"
                android:text="一星"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
            <ImageView
                android:id="@+id/jintutiao4"
                android:src="@drawable/one"
                android:layout_marginBottom="5px"
                android:layout_marginLeft="24px"
                android:layout_toEndOf="@+id/wuxin4"
                android:layout_alignBottom="@+id/wuxin4"
                android:layout_width="250px"
                android:layout_height="30px" />
            <TextView
                android:id="@+id/pingjia5"
                android:layout_marginLeft="24px"
                android:layout_toEndOf="@+id/jintutiao"
                android:layout_alignBottom="@+id/wuxin4"
                android:textSize="25px"
                android:text=""
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
            <TextView
                android:id="@+id/quanbupinglun"
                android:layout_marginLeft="50px"
                android:layout_alignParentLeft="true"
                android:layout_marginTop="36px"
                android:layout_below="@+id/wuxin4"
                android:textColor="#f6bd47"
                android:textSize="30px"
                android:text="全部评论"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
            <TextView
                android:layout_centerHorizontal="true"
                android:id="@+id/xuqiufenggexian2"
                android:background="#d7d7d7"
                android:layout_marginTop="12px"
                android:layout_below="@+id/quanbupinglun"
                android:layout_width="650px"
                android:layout_height="1px" />
            <com.handmark.pulltorefresh.library.PullToRefreshListView
                android:id="@+id/pinlun"
                android:layout_below="@+id/xuqiufenggexian2"
                android:layout_centerHorizontal="true"
                android:layout_width="680px"
                android:layout_height="380px">
            </com.handmark.pulltorefresh.library.PullToRefreshListView>
        </RelativeLayout>


    </RelativeLayout>
</RelativeLayout>