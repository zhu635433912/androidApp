<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <RelativeLayout
        android:id="@+id/myindex_listrelayout"
        android:background="@drawable/add08"
        android:layout_centerHorizontal="true"
        android:layout_width="match_parent"
        android:layout_height="370px">
    <modle.toos.CircleImageView
        android:id="@+id/myinde_usertoux"
        android:layout_marginTop="36px"
        android:layout_marginLeft="32px"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:src="@drawable/ox2"
        android:layout_width="70px"
        android:layout_height="70px" />

        <TextView
            android:id="@+id/myindeusername"
            android:textColor="#575757"
            android:layout_marginLeft="16px"
            android:layout_marginTop="20px"
            android:textSize="30px"
            android:layout_alignTop="@+id/myinde_usertoux"
            android:layout_toEndOf="@+id/myinde_usertoux"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <TextView
            android:id="@+id/fuweuleix"
            android:layout_marginEnd="38px"
            android:textSize="30px"
            android:layout_marginTop="50px"
            android:layout_alignParentTop="true"
            android:layout_alignParentEnd="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <TextView
            android:id="@+id/user_xuqiu"
            android:layout_marginTop="16px"
            android:layout_below="@+id/myinde_usertoux"
            android:layout_alignLeft="@+id/myinde_usertoux"
            android:textColor="#575757"
            android:textSize="40px"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <TextView
            android:id="@+id/xuqiuneiron"
            android:textColor="#575757"
            android:textSize="35px"
            android:layout_marginTop="16px"
            android:layout_alignLeft="@+id/user_xuqiu"
            android:layout_below="@+id/user_xuqiu"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <TextView
            android:id="@+id/statre"
            android:textColor="#f9d68e"
            android:textSize="35px"
            android:layout_marginBottom="20px"
            android:layout_marginEnd="40px"
            android:layout_alignParentBottom="true"
            android:layout_alignParentEnd="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <TextView
            android:id="@+id/fabushijian"
            android:textSize="25px"
            android:layout_marginBottom="20px"
            android:layout_marginLeft="30px"
            android:layout_alignParentBottom="true"
            android:layout_alignParentLeft="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        </RelativeLayout>

</RelativeLayout>