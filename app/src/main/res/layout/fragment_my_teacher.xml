<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#fffffe"
    >
    <com.deguan.xuelema.androidapp.viewimpl.FlexibleScrollView
        android:id="@+id/flexible_scroll_vew"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fadingEdge="none"
        android:background="#fffffe"
        android:fadingEdgeLength="0dp"
        android:fillViewport="true"
        android:scrollbars="none"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true">

        <LinearLayout
            android:background="#fffffe"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical" >

            <include
                android:id="@+id/flexible_header_view"
                layout="@layout/my_header_layout" />
            <View
                android:background="#e9e9e9"
                android:layout_width="match_parent"
                android:layout_height="15px"/>

            <LinearLayout
                android:layout_marginLeft="80px"
                android:layout_marginRight="80px"
                android:layout_marginTop="30px"
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <ImageView
                    android:src="@mipmap/my_course_icon"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
                <TextView
                    android:id="@+id/my_publish_tv"
                    android:textSize="32px"
                    android:layout_marginLeft="40px"
                    android:textColor="#4c4c4b"
                    android:text="我的发布（5）"
                    android:gravity="center_vertical"
                    android:layout_width="0px"
                    android:layout_weight="1"
                    android:layout_height="wrap_content" />
                <ImageView
                    android:src="@mipmap/right_jiantou"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
            </LinearLayout>
            <View
                android:layout_marginTop="30px"
                android:layout_marginLeft="50px"
                android:layout_marginRight="50px"
                android:background="#ece25e"
                android:layout_width="match_parent"
                android:layout_height="2px" />
            <LinearLayout
                android:layout_marginLeft="80px"
                android:layout_marginRight="80px"
                android:layout_marginTop="30px"
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <ImageView
                    android:src="@mipmap/my_order_icon"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
                <TextView
                    android:id="@+id/my_order_tv"
                    android:layout_marginLeft="40px"
                    android:textSize="32px"
                    android:textColor="#4c4c4b"
                    android:text="我的订单"
                    android:gravity="center_vertical"
                    android:layout_width="0px"
                    android:layout_weight="1"
                    android:layout_height="wrap_content" />
                <ImageView
                    android:src="@mipmap/right_jiantou"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
            </LinearLayout>

            <LinearLayout
                android:layout_marginTop="50px"
                android:layout_marginLeft="60px"
                android:layout_marginRight="60px"
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="40px">
                <RelativeLayout
                    android:layout_width="0px"
                    android:layout_weight="1"
                    android:layout_height="match_parent" >
                    <ImageView
                        android:id="@+id/nopay_image"
                        android:src="@mipmap/my_nopay_icon"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent" />
                    <TextView
                        android:id="@+id/my_nopay_number"
                        android:layout_height="15dp"
                        android:layout_width="15dp"
                        android:text=""
                        android:textColor="#ffffff"
                        android:gravity="center"
                        android:layout_marginRight="20px"
                        android:background="@drawable/em_unread_dot"
                        android:textSize="10sp"
                        android:visibility="gone"
                        android:layout_alignParentRight="true"
                        />
                </RelativeLayout>
                <RelativeLayout
                    android:layout_width="0px"
                    android:layout_weight="1"
                    android:layout_height="match_parent" >
                    <ImageView
                        android:id="@+id/progress_image"
                        android:src="@mipmap/my_progress_icon"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent" />
                    <TextView
                        android:id="@+id/my_progress_number"
                        android:layout_height="15dp"
                        android:layout_width="15dp"
                        android:text=""
                        android:textColor="#ffffff"
                        android:gravity="center"
                        android:layout_marginRight="20px"
                        android:background="@drawable/em_unread_dot"
                        android:textSize="10sp"
                        android:visibility="gone"
                        android:layout_alignParentRight="true"
                        />
                </RelativeLayout>
                <RelativeLayout
                    android:layout_width="0px"
                    android:layout_weight="1"
                    android:layout_height="match_parent" >
                    <ImageView
                        android:id="@+id/noeva_image"
                        android:src="@mipmap/my_noeva_icon"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent" />
                    <TextView
                        android:textColor="#ffffff"
                        android:id="@+id/my_noeva_number"
                        android:layout_height="15dp"
                        android:layout_width="15dp"
                        android:text=""
                        android:gravity="center"
                        android:layout_marginRight="20px"
                        android:background="@drawable/em_unread_dot"
                        android:textSize="10sp"
                        android:visibility="gone"
                        android:layout_alignParentRight="true"
                        />
                </RelativeLayout>
                <RelativeLayout
                    android:layout_width="0px"
                    android:layout_weight="1"
                    android:layout_height="match_parent" >
                    <ImageView
                        android:id="@+id/complete_image"
                        android:src="@mipmap/my_complete_icon"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent" />
                    <TextView
                        android:textColor="#ffffff"
                        android:id="@+id/my_complete_number"
                        android:layout_height="15dp"
                        android:layout_width="15dp"
                        android:text=""
                        android:gravity="center"
                        android:layout_marginRight="20px"
                        android:background="@drawable/em_unread_dot"
                        android:textSize="10sp"
                        android:visibility="gone"
                        android:layout_alignParentRight="true"
                        />
                </RelativeLayout>



            </LinearLayout>
            <LinearLayout
                android:layout_marginTop="25px"
                android:layout_marginLeft="60px"
                android:layout_marginRight="60px"
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="40px">
                <TextView
                    android:id="@+id/nopay_number_tv"
                    android:text="待付款"
                    android:gravity="center"
                    android:textSize="25px"
                    android:layout_gravity="center"
                    android:layout_width="0px"
                    android:layout_weight="1"
                    android:layout_height="wrap_content" />
                <TextView
                    android:id="@+id/ing_number_tv"
                    android:text="待授课"
                    android:textSize="25px"
                    android:gravity="center"
                    android:layout_gravity="center"
                    android:layout_width="0px"
                    android:layout_weight="1"
                    android:layout_height="wrap_content" />
                <TextView
                    android:id="@+id/noeva_number_tv"
                    android:text="已授课"
                    android:textSize="25px"
                    android:gravity="center"
                    android:layout_gravity="center"
                    android:layout_width="0px"
                    android:layout_weight="1"
                    android:layout_height="wrap_content" />
                <TextView
                    android:id="@+id/complete_number_tv"
                    android:text="已完成"
                    android:gravity="center"
                    android:textSize="25px"
                    android:layout_gravity="center"
                    android:layout_width="0px"
                    android:layout_weight="1"
                    android:layout_height="wrap_content" />
            </LinearLayout>
            <View
                android:layout_marginTop="25px"
                android:layout_marginLeft="50px"
                android:layout_marginRight="50px"
                android:background="#ece25e"
                android:layout_width="match_parent"
                android:layout_height="1px" />
            <LinearLayout
                android:id="@+id/my_share_ll"
                android:layout_marginLeft="80px"
                android:layout_marginRight="80px"
                android:layout_marginTop="30px"
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <ImageView
                    android:src="@mipmap/my_distrube_icon"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
                <TextView
                    android:layout_marginLeft="40px"
                    android:textSize="32px"
                    android:textColor="#4c4c4b"
                    android:text="我的二维码"
                    android:gravity="center_vertical"
                    android:layout_width="0px"
                    android:layout_weight="1"
                    android:layout_height="wrap_content" />
                <TextView
                    android:id="@+id/my_share_tv"
                    android:textSize="11px"
                    android:textColor="#4c4c4b"
                    android:text="0人"
                    android:layout_marginRight="110px"
                    android:layout_width="0px"
                    android:layout_height="wrap_content" />
                <ImageView
                    android:src="@mipmap/right_jiantou"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
            </LinearLayout>
            <View
                android:layout_marginTop="25px"
                android:layout_marginLeft="50px"
                android:layout_marginRight="50px"
                android:background="#ece25e"
                android:layout_width="match_parent"
                android:layout_height="1px" />
            <LinearLayout
                android:layout_marginLeft="80px"
                android:layout_marginRight="80px"
                android:layout_marginTop="30px"
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <ImageView
                    android:layout_marginLeft="6px"
                    android:src="@mipmap/my_leida_icon"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
                <TextView
                    android:layout_marginLeft="40px"
                    android:textSize="32px"
                    android:textColor="#4c4c4b"
                    android:text="搜周边"
                    android:gravity="center_vertical"
                    android:layout_width="0px"
                    android:layout_weight="1"
                    android:layout_height="wrap_content" />

            </LinearLayout>
            <RelativeLayout
                android:layout_marginTop="20px"
                android:layout_marginLeft="40px"
                android:layout_marginRight="40px"
                android:layout_marginBottom="100px"
                android:layout_width="match_parent"
                android:layout_height="400px">
                <com.baidu.mapapi.map.TextureMapView
                    android:id="@+id/my_map_view"
                    android:layout_width="match_parent"
                    android:layout_height="400px">
                </com.baidu.mapapi.map.TextureMapView>

                <com.facebook.drawee.view.SimpleDraweeView
                    app:roundAsCircle="true"
                    android:visibility="gone"
                    android:layout_centerInParent="true"
                    android:id="@+id/my_leida_image"
                    android:layout_gravity="center_horizontal|bottom"
                    app:actualImageScaleType="focusCrop"
                    android:layout_marginBottom="145px"
                    android:layout_width="60px"
                    android:layout_height="60px" />
                <ImageView
                    android:layout_centerInParent="true"
                    android:src="@mipmap/map_marker"
                    android:layout_width="40px"
                    android:layout_height="40px" />
                <com.deguan.xuelema.androidapp.utils.WaveView
                    android:id="@+id/my_waveview"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent" />
                <TextView
                    android:id="@+id/my_search_tv"
                    android:text="搜索"
                    android:textColor="#ffffff"
                    android:gravity="center"
                    android:layout_alignParentRight="true"
                    android:layout_alignParentBottom="true"
                    android:background="@mipmap/my_search_tv"
                    android:layout_width="wrap_content"
                    android:layout_marginRight="20px"
                    android:layout_marginBottom="280px"
                    android:layout_height="wrap_content" />
            </RelativeLayout>

        </LinearLayout>

    </com.deguan.xuelema.androidapp.viewimpl.FlexibleScrollView>


</RelativeLayout>
