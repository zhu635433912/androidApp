            android:layout_centerHorizontal="true"
            android:text="如何在需求大厅发布需求?"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/howto_place"
        android:layout_marginTop="20px"
        android:layout_below="@+id/xuqiuwenti"
        android:layout_centerHorizontal="true"
        android:background="@drawable/hepl2"
