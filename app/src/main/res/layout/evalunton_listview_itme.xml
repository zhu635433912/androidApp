<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:gravity="center"
    android:layout_width="match_parent"
    android:layout_height="190px">
    
    <RelativeLayout
        android:layout_width="800px"
        android:layout_height="200px">
        <com.facebook.drawee.view.SimpleDraweeView
            app:roundAsCircle="true"
            android:id="@+id/evaluaton_name"
            android:layout_marginLeft="20px"
            android:layout_marginTop="10px"
            android:layout_alignParentLeft="true"
            android:layout_alignParentTop="true"
            android:layout_width="80px"
            android:layout_height="80px" />
        <TextView
            android:id="@+id/evalunaton_username"
            android:layout_marginBottom="5px"
            android:text="aini1"
            android:textSize="30px"
            android:layout_marginTop="10px"
            android:layout_marginLeft="20px"
            android:layout_toRightOf="@+id/evaluaton_name"

            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <TextView
            android:id="@+id/evaluaton_text"
            android:textSize="30px"
            android:text="nihao"
            android:paddingLeft="20px"
            android:layout_marginTop="10px"
            android:layout_below="@+id/evaluaton_name"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:layout_width="match_parent"
            android:layout_height="90px" />
        <TextView
            android:layout_below="@+id/evalunaton_username"
            android:id="@+id/evalunaton_time"
            android:text="nihao"
            android:layout_marginTop="5px"
            android:layout_marginRight="30px"
            android:layout_alignParentRight="true"
            android:textSize="30px"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <TextView
            android:layout_marginTop="10px"
            android:layout_alignParentRight="true"
            android:layout_marginRight="50px"
            android:id="@+id/evaluaton_rank_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <ImageView
            android:layout_marginRight="50px"
            android:layout_toLeftOf="@+id/evaluaton_rank_tv"
            android:layout_marginTop="30px"
            android:id="@+id/evaluaton_star"
            android:layout_width="150px"
            android:layout_height="20px" />

    </RelativeLayout>
    
    
</RelativeLayout>