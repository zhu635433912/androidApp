<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:gravity="center"
    android:layout_width="match_parent"
    android:layout_height="300px">
    
    <RelativeLayout
        android:background="@drawable/add08"
        android:layout_width="600px"
        android:layout_height="250px">
        <modle.toos.CircleImageView
            android:id="@+id/evaluaton_name"
            android:layout_marginLeft="20px"
            android:layout_marginTop="20px"
            android:layout_alignParentLeft="true"
            android:layout_alignParentTop="true"
            android:layout_width="80px"
            android:layout_height="80px" />
        <TextView
            android:id="@+id/evalunaton_username"
            android:layout_marginBottom="16px"
            android:text="aini1"
            android:textSize="30px"
            android:layout_marginLeft="20px"
            android:layout_toRightOf="@+id/evaluaton_name"
            android:layout_alignBottom="@+id/evaluaton_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <TextView
            android:id="@+id/evaluaton_text"
            android:textSize="30px"
            android:text="nihao"
            android:paddingLeft="20px"
            android:layout_marginTop="10px"
            android:layout_below="@+id/evaluaton_name"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:layout_width="match_parent"
            android:layout_height="90px" />
        <TextView
            android:id="@+id/evalunaton_time"
            android:text="nihao"
            android:layout_marginBottom="20px"
            android:layout_marginRight="30px"
            android:layout_alignParentRight="true"
            android:layout_alignParentBottom="true"
            android:textSize="30px"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

    </RelativeLayout>
    
    
</RelativeLayout>