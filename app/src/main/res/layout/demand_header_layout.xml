<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="@dimen/header_height"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <ImageView
        android:id="@+id/iv"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scaleType="centerCrop"
        android:src="@drawable/add11" />

    <com.facebook.drawee.view.SimpleDraweeView
        app:roundAsCircle="true"
        android:id="@+id/demand_head_image"
        android:layout_marginTop="120px"
        android:layout_gravity="center_horizontal|bottom"
        app:actualImageScaleType="focusCrop"
        android:layout_marginBottom="140px"
        app:placeholderImage="@drawable/ox2"
        android:layout_width="140px"
        android:layout_height="140px" />
    <ImageView
        android:id="@+id/demand_gender_image"
        android:layout_marginLeft="30px"
        android:layout_marginBottom="140px"
        android:layout_gravity="center_horizontal|bottom"
        android:src="@mipmap/teacher_male"
        android:layout_width="30px"
        android:layout_height="30px" />

    <TextView
        android:id="@+id/demand_nickname_tv"
        android:layout_marginBottom="80px"
        android:textColor="#1e1e1e"
        android:textSize="35px"
        android:textStyle="bold"
        android:layout_gravity="center_horizontal|bottom"
        android:text="1222"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
    <TextView
        android:textSize="25px"
        android:layout_marginBottom="30px"
        android:layout_gravity="center_horizontal|bottom"
        android:layout_below="@+id/gerxxname"
        android:textColor="#545353"
        android:text="222222"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/demand_sign_tv" />

</FrameLayout>