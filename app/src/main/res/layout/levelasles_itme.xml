<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="150px">
    <modle.toos.CircleImageView
        android:id="@+id/yijifenxiaologo"
        android:layout_marginLeft="50px"
        android:layout_alignParentLeft="true"
        android:layout_centerVertical="true"
        android:src="@drawable/ox2"
        android:layout_width="80px"
        android:layout_height="80px" />
        <TextView

            android:id="@+id/yijifenxiaopname"
            android:textSize="30px"
            android:layout_marginLeft="30px"
            android:layout_toEndOf="@+id/yijifenxiaologo"
            android:layout_centerVertical="true"
            android:text="孺子牛"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <TextView
            android:id="@+id/luanqibazaotu"
            android:layout_marginLeft="400px"
            android:layout_toEndOf="@+id/yijifenxiaologo"
            android:layout_centerVertical="true"
            android:text="￥"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <TextView
            android:layout_marginLeft="20px"
            android:layout_toEndOf="@+id/luanqibazaotu"
            android:layout_centerVertical="true"
            android:textSize="30px"
            android:text="25.10"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
    </RelativeLayout>
    
</RelativeLayout>