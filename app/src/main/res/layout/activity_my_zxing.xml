<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#131313"
    tools:context="com.deguan.xuelema.androidapp.MyZxingActivity">
    <RelativeLayout
        android:background="#131313"
        android:layout_width="match_parent"
        android:layout_height="90px"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true">
        <ImageButton
            android:layout_marginLeft="34px"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:background="@mipmap/zxing_back_icon"
            android:layout_width="35px"
            android:layout_height="35px" />
        <RelativeLayout
            android:layout_alignParentTop="true"
            android:layout_alignParentLeft="true"
            android:id="@+id/back_rl"
            android:layout_width="120px"
            android:layout_height="90px">
        </RelativeLayout>

        <TextView
            android:layout_marginLeft="120px"
            android:layout_centerVertical="true"
            android:textSize="40px"
            android:textColor="#fffffe"
            android:text="我的二维码"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <ImageView
            android:id="@+id/zxing_right_image"
            android:layout_marginRight="30px"
            android:src="@mipmap/my_zxing_right"
            android:layout_alignParentRight="true"
            android:layout_width="wrap_content"
            android:layout_height="match_parent" />
    </RelativeLayout>
    <TextView
        android:id="@+id/my_share_tv"
        android:visibility="gone"
        android:background="@mipmap/my_share_bg"
        android:text="我的推广"
        android:gravity="center"
        android:textColor="#262626"
        android:layout_gravity="right"
        android:layout_marginRight="30px"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
    <android.support.v7.widget.CardView
        app:cardCornerRadius="20px"
        android:layout_margin="80px"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <LinearLayout
                android:layout_margin="30px"
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="70px">
                <com.facebook.drawee.view.SimpleDraweeView
                    android:id="@+id/zxing_head_image"
                    app:roundAsCircle="true"
                    app:placeholderImage="@drawable/hold_head"
                    android:layout_width="70px"
                    android:layout_height="70px" />
                <TextView
                    android:id="@+id/zxing_nickname_tv"
                    android:textSize="35px"
                    android:layout_marginLeft="30px"
                    android:text=""
                    android:layout_gravity="center_vertical"
                    android:textColor="#3b3b3b"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
                <ImageView
                    android:id="@+id/zxing_gender_image"
                    android:layout_marginLeft="20px"
                    android:src="@mipmap/gender_female_icon"
                    android:layout_gravity="center_vertical"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
            </LinearLayout>
            <TextView
                android:text="我的邀请码"
                android:layout_gravity="center_horizontal"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
            <TextView
                android:id="@+id/zxing_code_tv"
                android:layout_marginTop="10px"
                android:text=""
                android:layout_gravity="center_horizontal"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
            <ImageView
                android:id="@+id/zxing_image"
                android:layout_gravity="center"
                android:layout_marginTop="90px"
                android:layout_width="300px"
                android:layout_height="300px" />
            <LinearLayout
                android:id="@+id/zxing_share_ll"
                android:paddingBottom="20px"
                android:layout_gravity="bottom"
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:gravity="bottom"
                android:layout_height="match_parent">

            <LinearLayout

                android:layout_marginLeft="45px"
                android:layout_marginRight="45px"
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="60px">
                <ImageView
                    android:layout_width="0px"
                    android:layout_weight="1"
                    android:src="@mipmap/zxing_share_icon"
                    android:layout_height="match_parent" />
                <ImageView
                    android:layout_width="0px"
                    android:layout_weight="1"
                    android:src="@mipmap/zxing_qq_icon"
                    android:layout_height="match_parent" />
                <ImageView
                    android:layout_width="0px"
                    android:layout_weight="1"
                    android:src="@mipmap/zxing_weixin_icon"
                    android:layout_height="match_parent" />
                <ImageView
                    android:layout_width="0px"
                    android:layout_weight="1"
                    android:src="@mipmap/zxing_xinlang_icon"
                    android:layout_height="match_parent" />
                <ImageView
                    android:layout_width="0px"
                    android:layout_weight="1"
                    android:src="@mipmap/zxing_friends_icon"
                    android:layout_height="match_parent" />
            </LinearLayout>
            <LinearLayout
                android:layout_marginLeft="45px"
                android:layout_gravity="bottom"
                android:layout_marginRight="45px"
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <TextView
                    android:layout_weight="1"
                    android:text="分享"
                    android:gravity="center"
                    android:textSize="25px"
                    android:layout_width="0px"
                    android:layout_height="wrap_content" />
                <TextView
                    android:layout_weight="1"
                    android:text="QQ"
                    android:textSize="25px"
                    android:gravity="center"
                    android:layout_width="0px"
                    android:layout_height="wrap_content" />
                <TextView
                    android:layout_weight="1"
                    android:textSize="25px"
                    android:text="微信"
                    android:gravity="center"
                    android:layout_width="0px"
                    android:layout_height="wrap_content" />
                <TextView
                    android:layout_weight="1"
                    android:text="新浪"
                    android:textSize="25px"
                    android:gravity="center"
                    android:layout_width="0px"
                    android:layout_height="wrap_content" />
                <TextView
                    android:layout_weight="1"
                    android:text="朋友圈"
                    android:textSize="25px"
                    android:gravity="center"
                    android:layout_width="0px"
                    android:layout_height="wrap_content" />
            </LinearLayout>
            </LinearLayout>
        </LinearLayout>

    </android.support.v7.widget.CardView>
</LinearLayout>
