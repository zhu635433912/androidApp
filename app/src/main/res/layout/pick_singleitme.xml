<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:gravity="center"
    android:layout_height="match_parent"
    android:layout_width="match_parent">

    <RelativeLayout
        android:layout_marginTop="50px"
        android:background="@drawable/pick_single"
        android:layout_width="300px"
        android:layout_height="350px"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true">
    <com.facebook.drawee.view.SimpleDraweeView
        app:roundAsCircle="true"
        android:id="@+id/liebiaoname"
        android:layout_alignParentTop="true"
        android:layout_marginTop="30px"
        android:layout_centerHorizontal="true"
        app:placeholderImage="@drawable/ox2"
        android:layout_width="100px"
        android:layout_height="100px" />
    <TextView
        android:layout_marginTop="20px"
        android:id="@+id/listname"
        android:textSize="30px"
        android:text="1"
        android:layout_centerHorizontal="true"
        android:layout_below="@+id/liebiaoname"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
    <TextView
        android:id="@+id/coursename"
        android:textSize="35px"
        android:layout_marginTop="20px"
        android:layout_marginLeft="10px"
        android:layout_below="@+id/listname"
        android:layout_alignParentLeft="true"
        android:text="语文"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
        <TextView
            android:id="@+id/address_tv"
            android:textSize="30px"
            android:layout_marginTop="10px"
            android:text="浙江省"
            android:layout_below="@+id/coursename"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />
    <TextView
        android:id="@+id/xiadans"
        android:layout_marginRight="20px"
        android:layout_marginBottom="20px"
        android:layout_alignParentRight="true"
        android:layout_alignParentBottom="true"
        android:textSize="30px"
        android:text="2017/1/1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
    </RelativeLayout>
</RelativeLayout>