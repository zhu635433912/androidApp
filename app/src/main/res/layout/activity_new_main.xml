<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    >
    <FrameLayout
        android:id="@+id/main_contaner"
        android:layout_width="match_parent"
        android:layout_weight="1"
        android:layout_height="0dp"/>

<View
    android:background="#837474"
    android:layout_width="match_parent"
    android:layout_height="1px"/>
    <RelativeLayout
        android:background="@color/home_tab_backgroud"
        android:layout_width="match_parent"
        android:layout_height="100px">
        <include
            layout="@layout/widget_bottom_layout"
            android:layout_alignTop="@+id/new_main_image"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true" />
        <ImageView
            android:id="@+id/new_main_image"
            android:layout_centerInParent="true"
            android:layout_width="300px"
            android:padding="8px"
            android:layout_marginRight="15px"
            android:layout_marginLeft="15px"
            android:scaleType="fitCenter"
            android:src="@drawable/hly03"
            android:layout_height="100px" />
    </RelativeLayout>
</LinearLayout>
